{% extends 'front/layout.twig' %}

{% block title %}Úvod | Můj web{% endblock %}

{% block body %}
    <section class="mb-4">
        <h1 class="h3 mb-1 fw-semibold">{{ heading|default('Aktuální příspěvky') }}</h1>
        <p class="text-muted small mb-0">Nejnovější články a novinky z vašeho webu.</p>
    </section>

    {% if posts is empty %}
        <p class="text-muted">{{ empty_message|default('Žádné příspěvky zatím nejsou publikovány.') }}</p>
    {% else %}
        <div class="row row-cols-1 row-cols-md-2 g-3 g-md-4">
            {% for post in posts %}
                {% set type_def = content_types[post.type]|default({'slug': post.type, 'name': post.type}) %}
                <div class="col">
                    <article class="card h-100 shadow-sm border-0">
                        <div class="card-body d-flex flex-column gap-2">
                            <div class="d-flex flex-wrap gap-2 text-muted small align-items-center">
                                <span class="d-inline-flex align-items-center gap-1">
                                    <i class="bi bi-calendar-event" aria-hidden="true"></i>
                                    {{ post.created_at|date('j. n. Y') }}
                                </span>
                                <span class="d-inline-flex align-items-center gap-1">
                                    <i class="bi bi-journal-text" aria-hidden="true"></i>
                                    {{ type_def.name }}
                                </span>
                                {% if post.author %}
                                    <span class="d-inline-flex align-items-center gap-1">
                                        <i class="bi bi-person" aria-hidden="true"></i>
                                        {% if post.author.profile_url %}
                                            <a href="{{ post.author.profile_url }}" class="text-decoration-none">{{ post.author.nickname }}</a>
                                        {% else %}
                                            {{ post.author.nickname }}
                                        {% endif %}
                                    </span>
                                {% endif %}
                            </div>
                            <h2 class="h5 mb-1">
                                <a href="/{{ type_def.slug }}/{{ post.slug }}" class="stretched-link text-decoration-none">{{ post.title }}</a>
                            </h2>
                            {% set preview = post.excerpt ?: post.body %}
                            {% if preview %}
                                <p class="card-text text-muted small mb-0">{{ preview|striptags|slice(0, 170) }}{% if preview|striptags|length > 170 %}…{% endif %}</p>
                            {% endif %}
                        </div>
                    </article>
                </div>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
