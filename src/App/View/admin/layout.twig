{# src/App/View/admin/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Administrace{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    {# Bootstrap 5 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Layout adminu */
        body {
            min-height: 100vh;
        }

        .admin-wrapper {
            display: flex;
            min-height: calc(100vh - 56px); /* 56px = výška navbaru */
        }

        .admin-sidebar {
            width: 260px;
            flex-shrink: 0;
        }

        .admin-content {
            flex: 1;
            padding: 1.5rem;
        }

        /* Malé displeje: sidebar je offcanvas */
        @media (max-width: 991.98px) {
            .admin-sidebar {
                display: none;
            }
        }

        /* Optional: aktivní link */
        .nav-link.active {
            font-weight: 600;
        }
    </style>

    {% block styles %}{% endblock %}
</head>
<body>

{# TOP NAVBAR #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="btn btn-outline-light d-lg-none me-2" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#adminSidebarOffcanvas"
                aria-controls="adminSidebarOffcanvas">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="/admin">Admin</a>

        <div class="d-flex ms-auto">
            {% if app_user is defined and app_user %}
                <span class="navbar-text me-3 d-none d-sm-inline">
                    {{ app_user.email }} ({{ app_user.role|default('') }})
                </span>
            {% endif %}
            <a href="/admin/logout" class="btn btn-outline-light btn-sm">Odhlásit</a>
        </div>
    </div>
</nav>

<div class="admin-wrapper">

    {# SIDEBAR na desktopu #}
    <aside class="admin-sidebar bg-light border-end d-none d-lg-block">
        <div class="p-3">
            <div class="fw-bold mb-3 text-uppercase small text-muted">
                Navigace
            </div>
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'dashboard' %}active{% endif %}"
                       href="/admin">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'pages' %}active{% endif %}"
                       href="/admin/pages">
                        Stránky
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'terms' %}active{% endif %}"
                       href="/admin/terms">
                        Termy
                    </a>
                </li>
                {% if app_user is defined and app_user and app_user.role == 'admin' %}
                    <li class="nav-item">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'users' %}active{% endif %}"
                           href="/admin/users">
                            Uživatelé
                        </a>
                    </li>
                {% endif %}
                {# další odkazy... #}
            </ul>
        </div>
    </aside>

    {# SIDEBAR jako offcanvas na mobilech #}
    <div class="offcanvas offcanvas-start" tabindex="-1" id="adminSidebarOffcanvas">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'dashboard' %}active{% endif %}"
                       href="/admin">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'pages' %}active{% endif %}"
                       href="/admin/pages">
                        Stránky
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {% if current_menu is defined and current_menu == 'terms' %}active{% endif %}"
                       href="/admin/terms">
                        Termy
                    </a>
                </li>
                {% if app_user is defined and app_user and app_user.role == 'admin' %}
                    <li class="nav-item">
                        <a class="nav-link {% if current_menu is defined and current_menu == 'users' %}active{% endif %}"
                           href="/admin/users">
                            Uživatelé
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

    {# HLAVNÍ OBSAH #}
    <main class="admin-content">

{% if flash_success %}
    {% for msg in flash_success %}
        <div class="alert alert-success">{{ msg }}</div>
    {% endfor %}
{% endif %}
{% if flash_error %}
    {% for msg in flash_error %}
        <div class="alert alert-danger">{{ msg }}</div>
    {% endfor %}
{% endif %}


        {% block body %}{% endblock %}
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>
