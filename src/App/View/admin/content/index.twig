{% extends 'admin/layout.twig' %}

{% set current_menu = current_type.slug %}

{% block title %}Obsah | Administrace{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">{{ current_type.plural_name|default('Obsah') }}</h1>
        <a href="/admin/content/{{ current_type.slug }}/create" class="btn btn-primary">Nový {{ current_type.name|lower }}</a>
    </div>

    {% if all_type_definitions is defined and all_type_definitions|length > 1 %}
        <ul class="nav nav-pills mb-3">
            {% for key, type in all_type_definitions %}
                <li class="nav-item">
                    <a class="nav-link {% if current_type.slug == type.slug %}active{% endif %}" href="/admin/content/{{ type.slug }}">
                        {{ type.plural_name|default(type.menu_label|default(type.name)) }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

    {% if items is empty %}
        <div class="alert alert-info">Zatím zde není žádný obsah.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Typ</th>
                        <th>Slug</th>
                        <th>Upraveno</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td class="fw-semibold">{{ item.title }}</td>
                            <td>{{ types[item.type]|default(item.type) }}</td>
                            <td><code>{{ item.slug }}</code></td>
                            <td>{{ item.updated_at|date('j. n. Y H:i') }}</td>
                            <td class="text-end">
                                <a href="/admin/content/{{ current_type.slug }}/{{ item.id }}/edit" class="btn btn-sm btn-outline-primary">Upravit</a>
                                <form action="/admin/content/{{ current_type.slug }}/{{ item.id }}/delete" method="post" class="d-inline"
                                      onsubmit="return confirm('Opravdu smazat?');">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Smazat</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
