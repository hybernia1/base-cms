{% import 'admin/partials/components.twig' as ui %}

<div class="card-body p-0">
    <div class="table-responsive">
        <table class="table mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>E-mail</th>
                    <th>Role</th>
                    <th>Stav</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
            {% if users %}
                {% for user in users %}
                    <tr>
                        <td>
                            <div class="fw-semibold">{{ user.email }}</div>
                            {% if user.nickname %}
                                <div class="text-muted small d-flex align-items-center gap-2">
                                    {% if user.is_banned %}
                                        <i class="bi bi-slash-circle text-danger" aria-hidden="true"></i>
                                        <span class="visually-hidden">Zablokovaný uživatel</span>
                                    {% endif %}
                                    <span>Přezdívka: {{ user.nickname }}</span>
                                </div>
                            {% endif %}
                        </td>
                        <td>{{ roles[user.role] ?? user.role }}</td>
                        <td>
                            {% if user.is_banned %}
                                <span class="badge bg-danger">Zablokován</span>
                            {% else %}
                                <span class="badge bg-success">Aktivní</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="d-flex flex-wrap justify-content-end gap-2 align-items-center">
                                {{ ui.crud_actions('/admin/users/' ~ user.id, {
                                    delete: {
                                        confirm: 'Opravdu smazat tohoto uživatele?',
                                        ajax: true,
                                        hidden: { redirect: pagination.current_url }
                                    }
                                }) }}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="4" class="text-center p-4 text-muted">Zatím žádní uživatelé.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
{{ ui.pagination(pagination) }}
