{# src/App/View/front/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Můj web{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="/assets/css/admin-bar.css">
    <style>
        body { background-color: #f8fafc; }
        header { background: #0d6efd; color: #fff; }
        header a { color: #fff; text-decoration: none; }
        .site-brand { font-weight: 700; letter-spacing: .5px; }
        main { padding: 2rem 0 3rem; }
        footer { padding: 2rem 0; color: #6c757d; }
        .content-body p { margin-bottom: 1rem; }
    </style>
</head>
<body class="{% if admin_bar is defined and admin_bar %}has-admin-bar{% endif %}">
{% import 'admin/partials/admin_bar.twig' as admin_ui %}
{% if admin_bar is defined and admin_bar %}
    {{ admin_ui.admin_bar({
        dashboard_url: admin_bar.dashboard_url,
        edit_url: admin_bar.edit_url|default(null),
        create_links: admin_bar.create_links|default([]),
        user_role_label: admin_bar.user_role_label,
        user_label: admin_bar.user_label,
        user_links: admin_bar.user_links|default([])
    }) }}
{% endif %}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand site-brand" href="/">Base CMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Přepnout navigaci">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                    <li class="nav-item"><a class="nav-link" href="/">Domů</a></li>
                    <li class="nav-item"><a class="nav-link" href="/{{ post_archive_slug }}">Archiv</a></li>
                    {% if current_user %}
                        <li class="nav-item"><a class="nav-link" href="/profile">Můj profil</a></li>
                        <li class="nav-item"><a class="nav-link" href="/logout"><i class="bi bi-box-arrow-right me-1"></i>Odhlásit se</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="/login"><i class="bi bi-box-arrow-in-right me-1"></i>Přihlášení</a></li>
                        <li class="nav-item"><a class="nav-link" href="/register"><i class="bi bi-person-plus me-1"></i>Registrace</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container">
    {% if flash_success %}
        {% for msg in flash_success %}
            <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
    {% endif %}
    {% if flash_error %}
        {% for msg in flash_error %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}
    {% endif %}

    {% block body %}{% endblock %}
</main>

<footer class="container">© {{ "now"|date('Y') }} Base CMS</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>
