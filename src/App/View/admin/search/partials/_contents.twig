<div class="card shadow-sm h-100">
    <div class="card-header d-flex align-items-center justify-content-between">
        <span class="fw-semibold">Obsah</span>
        <span class="badge text-bg-light">{{ items|length }}</span>
    </div>
    <div class="list-group list-group-flush">
        {% if items is empty %}
            <div class="list-group-item text-muted">Žádné výsledky.</div>
        {% else %}
            {% for item in items %}
                <a href="/admin/content/{{ item.type_slug }}/{{ item.id }}/edit" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-semibold">{{ item.title }}</div>
                            <div class="small text-muted">{{ item.type_label }} · {{ item.slug }}</div>
                        </div>
                        <span class="badge {{ item.status == 'published' ? 'text-bg-success' : 'text-bg-secondary' }}">
                            {{ item.status == 'published' ? 'Publ.' : 'Draft' }}
                        </span>
                    </div>
                </a>
            {% endfor %}
        {% endif %}
    </div>
</div>
