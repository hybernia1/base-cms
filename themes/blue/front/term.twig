{% extends 'front/layout.twig' %}

{% block title %}
    {% if term %}{{ term.name }} | {{ term_type.label|default('Term') }}{% else %}Term nenalezen{% endif %}
{% endblock %}

{% block body %}
    <div class="mb-4">
        <h1 class="display-6 mb-1">{{ heading|default(term.name|default('Term')) }}</h1>
        {% if term_type %}
            <p class="text-muted mb-1">{{ term_type.label }} · archiv příspěvků</p>
        {% endif %}
        {% if term and term.description %}
            <p class="text-muted mb-0">{{ term.description|nl2br }}</p>
        {% endif %}
    </div>

    {% if not term %}
        <div class="alert alert-warning">{{ empty_message|default('Term nebyl nalezen.') }}</div>
    {% elseif items is empty %}
        <p class="text-muted">{{ empty_message|default('Tento term zatím nemá žádný obsah.') }}</p>
    {% else %}
        <div class="article-stack d-flex flex-column gap-3">
            {% for post in items %}
                {% set type_def = content_types[post.type]|default({'slug': post.type, 'name': post.type}) %}
                {% set thumb = post.thumbnail ?? null %}
                <article class="card border-0 p-3 article-card">
                    <div class="d-flex align-items-start gap-3">
                        <div class="article-thumb flex-shrink-0 d-flex align-items-center justify-content-center text-uppercase fw-bold" aria-hidden="true">
                            {% if thumb %}
                                <img src="/{{ thumb.path }}/{{ thumb.webp_filename ?: thumb.filename }}" alt="{{ thumb.alt ?: post.title }}" loading="lazy" decoding="async">
                            {% else %}
                                {{ post.title|default('A')|slice(0, 1) }}
                            {% endif %}
                        </div>
                        <div class="flex-grow-1">
                            <h2 class="h5 mb-2">
                                <a href="/{{ type_def.slug }}/{{ post.slug }}" class="stretched-link text-decoration-none text-dark">{{ post.title }}</a>
                            </h2>
                            {% set preview = post.excerpt ?: post.body %}
                            {% if preview %}
                                <p class="card-text text-muted mb-2">{{ preview|striptags|slice(0, 170) }}{% if preview|striptags|length > 170 %}…{% endif %}</p>
                            {% endif %}
                            <p class="text-muted small mb-0">{{ post.created_at|date('j. n. Y') }}</p>
                        </div>
                    </div>
                </article>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
