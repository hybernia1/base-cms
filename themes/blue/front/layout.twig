{# src/App/View/front/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ site.name|default('Můj web') }}{% endblock %}</title>
    {% if seo is defined and not seo.indexing_enabled %}
        <meta name="robots" content="noindex, nofollow">
    {% endif %}
    {% if current_url is defined %}
        <link rel="canonical" href="{{ current_url }}">
    {% endif %}
    {% if site.favicon and site.favicon.url %}
        <link rel="icon" href="{{ site.favicon.url }}" type="{{ site.favicon.mime_type ?: 'image/x-icon' }}">
    {% endif %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/admin-bar.css">
    {% if hooks is defined and hooks.head is defined %}
        {% for snippet in hooks.head %}
            {{ snippet|raw }}
        {% endfor %}
    {% endif %}
    {% block head_extra %}{% endblock %}
    <style>
        :root {
            --surface: #ffffff;
            --muted: #6f6b63;
            --stroke: #e7dfd0;
            --radius: 0;
            --sand: #f3ede3;
            --ink: #1f1a17;
            --accent: #0f4fa3;
        }
        body {
            background-color: var(--sand);
            color: var(--ink);
            font-size: 16px;
            font-family: 'Inter', system-ui, -apple-system, "Segoe UI", sans-serif;
        }
        header {
            position: relative;
            background: #f9f7f3;
            color: var(--ink);
            box-shadow: 0 10px 35px rgba(34, 26, 16, 0.08);
            border-bottom: 1px solid var(--stroke);
            overflow: hidden;
        }
        header a { color: var(--ink); text-decoration: none; }
        .navbar { padding: .7rem 0; }
        .site-brand { font-weight: 700; letter-spacing: .5px; font-size: 1rem; text-transform: uppercase; }
        .site-logo { height: 28px; width: auto; }
        .nav-actions .btn-icon { width: 42px; height: 42px; border-radius: 50%; border: 1px solid var(--stroke); background: #fff; display: inline-flex; align-items: center; justify-content: center; color: var(--ink); }
        .nav-actions .btn-icon:hover, .nav-actions .btn-icon:focus { border-color: var(--accent); color: var(--accent); }
        .nav-search { gap: .5rem; }
        .nav-search .form-control,
        .nav-search .btn { padding: .45rem .75rem; }
        .nav-link {
            font-weight: 600;
            letter-spacing: .4px;
            text-transform: uppercase;
            font-size: .9rem;
            padding: .5rem .35rem;
            border-bottom: 2px solid transparent;
        }
        .nav-link:hover,
        .nav-link:focus {
            color: var(--accent);
            border-color: var(--accent);
        }
        .nav-link.active {
            color: var(--accent) !important;
            border-color: var(--accent);
        }
        .nav-item + .nav-item { margin-left: .6rem; }
        .nav-search input { background: #fff; border: 1px solid var(--stroke); border-radius: 12px; }
        .nav-search .btn { border-radius: 12px; border-color: var(--stroke); color: var(--ink); }
        .header-search-overlay {
            position: absolute;
            inset: 0;
            background: rgba(249, 247, 243, 0.98);
            backdrop-filter: blur(2px);
            display: none;
            align-items: center;
            z-index: 5;
            border-bottom: 1px solid var(--stroke);
            box-shadow: inset 0 -1px 0 var(--stroke);
        }
        .header-search-overlay.show { display: flex; }
        .header-search-overlay .nav-search { width: 100%; max-width: 640px; }
        .header-search-overlay .nav-search .form-control { background: #fff; }
        .header-search-overlay .btn-close-search { border: 1px solid var(--stroke); }
        .nav-scroller {
            border-top: 1px solid var(--stroke);
            border-bottom: 1px solid var(--stroke);
            background: #fbf8f2;
        }
        .nav-scroller-inner {
            overflow-x: auto;
            scrollbar-width: thin;
            padding: .35rem 0;
        }
        .nav-scroller-inner::-webkit-scrollbar { height: 6px; }
        .nav-scroller-inner::-webkit-scrollbar-thumb { background: var(--stroke); border-radius: 999px; }
        .nav-track {
            display: inline-flex;
            gap: .25rem;
            padding: 0 .25rem;
        }
        .nav-pill {
            display: inline-flex;
            align-items: center;
            padding: .4rem .85rem;
            border-radius: 999px;
            border: 1px solid transparent;
            background: transparent;
            font-weight: 600;
            letter-spacing: .25px;
            text-transform: uppercase;
            color: var(--ink);
            white-space: nowrap;
            transition: all .15s ease-in-out;
        }
        .nav-pill:hover,
        .nav-pill:focus {
            color: var(--accent);
            border-color: var(--accent);
            background: #fff;
        }
        .nav-pill.active {
            background: #fff;
            border-color: var(--accent);
            color: var(--accent);
        }
        @media (max-width: 991.98px) {
            .nav-search { width: 100%; }
            .nav-item + .nav-item { margin-left: 0; }
            .nav-link { padding-left: 0; padding-right: 0; }
        }
        main { padding: 1.5rem 0 2.25rem; }
        footer { padding: 1.75rem 0; color: var(--muted); font-size: .95rem; }
        .card { border: 1px solid var(--stroke); border-radius: var(--radius); box-shadow: 0 18px 40px rgba(34, 26, 16, 0.06); }
        .card-body { padding: 1rem 1.25rem; }
        .content-body p { margin-bottom: 1rem; line-height: 1.7; }
        .content-body h2, .content-body h3, .content-body h4 { margin-top: 1.2rem; margin-bottom: .6rem; }
        .content-body ul, .content-body ol { padding-left: 1.1rem; }
        .breadcrumb { font-size: .95rem; color: var(--muted); }
        .breadcrumb a { color: var(--ink); }
        .dropdown-submenu .dropdown-menu {
            position: static;
        }
        .dropdown-menu { border-radius: 10px; }
        .dropdown-menu .dropdown-menu {
            margin-left: 0.5rem;
        }
        .article-stack {
            background: transparent;
        }
        .article-list {
            background: #fff;
            border-radius: 0;
            box-shadow: none;
            border: none;
            padding: 0;
        }
        .article-list-body {
            display: flex;
            flex-direction: column;
        }
        .article-row {
            padding: 1rem 1.25rem;
            transition: background-color .12s ease;
        }
        .article-row + .article-row {
            border-top: 1px solid var(--stroke);
        }
        .article-row:hover {
            background-color: #fffaf2;
        }
        .article-thumb {
            width: 88px;
            height: 88px;
            background: radial-gradient(circle at 30% 30%, #e5d7c3, #d1c2ae);
            color: var(--ink);
            font-size: 1.4rem;
            border-radius: 16px;
            overflow: hidden;
        }
        .article-thumb img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        .badge.text-bg-light {
            background: #f0ebdf !important;
            color: var(--ink);
            border: 1px solid var(--stroke);
            padding: .5rem .75rem;
            border-radius: 999px;
        }
        .article-shell {
            background: transparent;
            border: none;
            border-radius: 0;
            box-shadow: none;
            overflow: hidden;
        }
        .article-shell .card-img-top {
            border-radius: 0;
        }
        .article-shell .card-body { padding: 0; }
        @media (min-width: 768px) {
            .navbar { padding: .8rem 0; }
            main { padding: 2rem 0 3rem; }
            .card-body { padding: 1.25rem 1.5rem; }
        }
        @media (max-width: 575.98px) {
            .article-row { padding: .85rem 1rem; }
            .article-thumb { width: 78px; height: 78px; }
        }
        @media (max-width: 767.98px) {
            .article-list {
                margin-left: -1rem;
                margin-right: -1rem;
            }
            .article-shell {
                border-radius: 0;
                overflow: visible;
            }
            .article-shell .card-img-top {
                display: block;
                width: 100vw;
                max-width: none;
                margin-left: calc(50% - 50vw);
                margin-right: calc(50% - 50vw);
            }
        }
    </style>
</head>
<body class="{% if admin_bar is defined and admin_bar %}has-admin-bar{% endif %}">
{% import 'admin/partials/admin_bar.twig' as admin_ui %}
{% if admin_bar is defined and admin_bar %}
    {{ admin_ui.admin_bar({
        dashboard_url: admin_bar.dashboard_url,
        edit_url: admin_bar.edit_url|default(null),
        create_links: admin_bar.create_links|default([]),
        user_role_label: admin_bar.user_role_label,
        user_label: admin_bar.user_label,
        user_links: admin_bar.user_links|default([])
    }) }}
{% endif %}
<header>
    <nav class="navbar navbar-light">
        <div class="container align-items-center">
            <a class="navbar-brand site-brand d-flex align-items-center gap-2" href="/">
                {% if site.logo and site.logo.url %}
                    <img src="{{ site.logo.url }}" alt="{{ site.logo.alt ?: site.name }}" class="site-logo">
                {% endif %}
                <span>{{ site.name|default('Base CMS') }}</span>
            </a>

            {% import _self as nav %}
            {% set nav_items = [] %}
            {% for item in navigation|default([]) %}
                {% if not ((current_user and item.type in ['core_login', 'core_register']) or (not current_user and item.type in ['core_profile', 'core_logout'])) %}
                    {% set nav_items = nav_items|merge([item]) %}
                {% endif %}
            {% endfor %}

            {% if nav_items is empty %}
                {% set nav_items = [
                    {'label': 'Domů', 'url': '/', 'children': [], 'type': 'core_home', 'open_in_new_tab': false},
                    {'label': 'Archiv', 'url': '/' ~ post_archive_slug, 'children': [], 'type': 'archive', 'open_in_new_tab': false},
                    {'label': current_user ? 'Můj profil' : 'Přihlášení', 'url': current_user ? '/profile' : '/login', 'children': [], 'type': current_user ? 'core_profile' : 'core_login', 'open_in_new_tab': false},
                ] %}
            {% endif %}

            <div class="d-flex align-items-center gap-2 nav-actions ms-auto">
                <button class="btn btn-icon" type="button" data-action="toggle-search" aria-expanded="false" aria-controls="headerSearchOverlay" aria-label="Otevřít vyhledávání">
                    <i class="bi bi-search"></i>
                </button>
                <a class="btn btn-icon" href="{{ current_user ? '/profile' : '/login' }}" aria-label="{{ current_user ? 'Přejít na profil' : 'Přihlásit se' }}">
                    <i class="bi bi-person"></i>
                </a>
            </div>
        </div>
        <div class="header-search-overlay" id="headerSearchOverlay" hidden>
            <div class="container d-flex align-items-center gap-3 py-3 py-lg-0">
                <form class="d-flex nav-search flex-grow-1" role="search" method="get" action="/search">
                    <label class="visually-hidden" for="navSearch">Hledat</label>
                    <input class="form-control form-control-sm me-2" type="search" name="q" id="navSearch" placeholder="Hledat…" aria-label="Hledat" minlength="2" required>
                    <button class="btn btn-outline-dark btn-sm" type="submit" aria-label="Odeslat vyhledávání" title="Hledat">
                        <i class="bi bi-search" aria-hidden="true"></i>
                    </button>
                </form>
                <button class="btn btn-icon btn-close-search" type="button" data-action="close-search" aria-label="Zavřít vyhledávání">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        </div>
    </nav>

    <div class="nav-scroller">
        <div class="container nav-scroller-inner">
            <div class="nav-track">
                {% for item in nav_items %}
                    {% set active = current_url is defined and current_url == item.url %}
                    {% set target = item.open_in_new_tab ? '_blank' : '_self' %}
                    {% set rel = item.open_in_new_tab ? 'noopener' : null %}
                    <a class="nav-pill{% if active %} active{% endif %}" href="{{ item.url }}" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>{{ item.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</header>

<main class="container">
    {% if flash_success %}
        {% for msg in flash_success %}
            <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
    {% endif %}
    {% if flash_error %}
        {% for msg in flash_error %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}
    {% endif %}

    {% if breadcrumbs_enabled and breadcrumbs is defined and breadcrumbs %}
        <nav aria-label="Drobečková navigace" class="mb-3">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                {% for crumb in breadcrumbs %}
                    {% if crumb.url is defined and crumb.url and not loop.last %}
                        <li class="breadcrumb-item"><a href="{{ crumb.url }}">{{ crumb.label }}</a></li>
                    {% else %}
                        <li class="breadcrumb-item active" aria-current="page">{{ crumb.label }}</li>
                    {% endif %}
                {% endfor %}
            </ol>
        </nav>
    {% endif %}

    {% block body %}{% endblock %}
</main>

<footer class="container">© {{ "now"|date('Y') }} {{ site.name|default('Base CMS') }}</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    (() => {
        const overlay = document.getElementById('headerSearchOverlay');
        const toggleBtn = document.querySelector('[data-action="toggle-search"]');
        const closeBtn = overlay?.querySelector('[data-action="close-search"]');
        const input = overlay?.querySelector('input[name="q"]');

        const openOverlay = () => {
            if (!overlay) return;
            overlay.classList.add('show');
            overlay.removeAttribute('hidden');
            toggleBtn?.setAttribute('aria-expanded', 'true');
            input?.focus();
        };

        const closeOverlay = () => {
            if (!overlay) return;
            overlay.classList.remove('show');
            overlay.setAttribute('hidden', 'hidden');
            toggleBtn?.setAttribute('aria-expanded', 'false');
        };

        toggleBtn?.addEventListener('click', (event) => {
            event.preventDefault();
            if (overlay?.classList.contains('show')) {
                closeOverlay();
            } else {
                openOverlay();
            }
        });

        closeBtn?.addEventListener('click', (event) => {
            event.preventDefault();
            closeOverlay();
        });

        document.addEventListener('keyup', (event) => {
            if (event.key === 'Escape') {
                closeOverlay();
            }
        });
    })();
</script>
{% block scripts %}{% endblock %}
{% if hooks is defined and hooks.footer is defined %}
    {% for snippet in hooks.footer %}
        {{ snippet|raw }}
    {% endfor %}
{% endif %}
{% macro nav_item(item) %}
    {% set hasChildren = item.children is defined and item.children|length > 0 %}
    {% set target = item.open_in_new_tab ? '_blank' : '_self' %}
    {% set rel = item.open_in_new_tab ? 'noopener' : null %}
    {% if hasChildren %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="{{ item.url ?? '#' }}" role="button" data-bs-toggle="dropdown" aria-expanded="false" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>{{ item.label }}</a>
            <ul class="dropdown-menu">
                {% for child in item.children %}
                    {{ _self.dropdown_item(child) }}
                {% endfor %}
            </ul>
        </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link" href="{{ item.url }}" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>{{ item.label }}</a>
        </li>
    {% endif %}
{% endmacro %}

{% macro dropdown_item(item, level = 0) %}
    {% set hasChildren = item.children is defined and item.children|length > 0 %}
    {% set target = item.open_in_new_tab ? '_blank' : '_self' %}
    {% set rel = item.open_in_new_tab ? 'noopener' : null %}
    <li class="{% if hasChildren %}dropdown-submenu{% endif %}">
        <a class="dropdown-item d-flex align-items-center justify-content-between" href="{{ item.url }}" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>
            <span style="padding-left: {{ (level + 1) * 8 }}px;">{{ item.label }}</span>
            {% if hasChildren %}<i class="bi bi-chevron-right small"></i>{% endif %}
        </a>
        {% if hasChildren %}
            <ul class="dropdown-menu position-static border-0 shadow-none ps-2 show">
                {% for child in item.children %}
                    {{ _self.dropdown_item(child, level + 1) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}
</body>
</html>
