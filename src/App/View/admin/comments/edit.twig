{% extends 'admin/layout.twig' %}

{% import 'admin/partials/components.twig' as ui %}

{% set current_menu = 'comments' %}
{% block title %}Detail komentáře | Administrace{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-3">
        <div>
            <h1 class="h4 mb-0">Detail komentáře</h1>
            <p class="text-muted mb-0">Upravit text, autora nebo stav komentáře.</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between flex-wrap gap-2 mb-4 align-items-center">
                <div class="text-muted small">
                    <div>Vytvořeno: {{ comment.created_at|date('j. n. Y H:i') }}</div>
                    <div>Upraveno: {{ comment.updated_at|date('j. n. Y H:i') }}</div>
                    <div>IP adresa: {{ comment.ip_address ?: 'Neznámá' }}</div>
                </div>
                <div class="text-end">
                    {{ ui.back_button('/admin/comments', { label: 'Zpět na přehled' }) }}
                </div>
            </div>

            {% if content %}
                <div class="alert alert-light border d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fw-semibold">{{ content.title }}</div>
                        <div class="text-muted small">Typ: {{ content.type }}</div>
                    </div>
                    {{ ui.view_button('/admin/content/' ~ (content_slug ?: content.type) ~ '/' ~ content.id ~ '/edit', {
                        label: 'Otevřít obsah',
                        variant: 'primary',
                        icon: 'bi-pencil',
                        block: true
                    }) }}
                </div>
            {% endif %}

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <div class="border rounded p-3 h-100 bg-light-subtle">
                        <div class="small text-muted mb-2">Vazba komentáře</div>
                        {% if comment.parent_id %}
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-arrow-return-left text-muted"></i>
                                <span class="fw-semibold">Odpověď na #{{ comment.parent_id }}</span>
                            </div>
                            {% if parent_comment %}
                                <div class="small text-muted mt-2 text-break">{{ parent_comment.body|slice(0, 140) }}{% if parent_comment.body|length > 140 %}…{% endif %}</div>
                                <a href="/admin/comments/{{ parent_comment.id }}/edit" class="small">Otevřít rodiče</a>
                            {% endif %}
                        {% else %}
                            <div class="fw-semibold">Rodičovský komentář</div>
                            <div class="small text-muted">Na tento komentář mohou uživatelé odpovědět.</div>
                        {% endif %}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="border rounded p-3 h-100">
                        <div class="small text-muted mb-2">Navazující reakce</div>
                        {% if child_comments %}
                            <ul class="list-unstyled mb-0 small">
                                {% for child in child_comments %}
                                    <li class="mb-2 pb-2 border-bottom">
                                        <div class="fw-semibold">#{{ child.id }} • {{ child.author_name ?: 'Anonym' }}</div>
                                        <div class="text-muted">{{ child.body|slice(0, 120) }}{% if child.body|length > 120 %}…{% endif %}</div>
                                        <a href="/admin/comments/{{ child.id }}/edit">Otevřít detail</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <div class="text-muted">Na tento komentář zatím nikdo nereagoval.</div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <form method="post" action="/admin/comments/{{ comment.id }}/edit" class="mt-3" id="commentForm">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="author_name">Autor</label>
                        <input type="text" name="author_name" id="author_name" class="form-control" value="{{ comment.author_name }}" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="author_email">E-mail</label>
                        <input type="email" name="author_email" id="author_email" class="form-control" value="{{ comment.author_email }}" required>
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label" for="body">Text komentáře</label>
                    <textarea name="body" id="body" class="form-control" rows="5" required>{{ comment.body }}</textarea>
                </div>

                <div class="mt-3">
                    <label class="form-label" for="status">Stav</label>
                    <select name="status" id="status" class="form-select">
                        {% for status_item in statuses %}
                            <option value="{{ status_item }}" {% if status_item == comment.status %}selected{% endif %}>
                                {{ status_item == 'approved' ? 'Schváleno' : 'Čeká na schválení' }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

            </form>

            <div class="d-flex justify-content-between align-items-center mt-4 flex-wrap gap-2">
                {{ ui.back_button('/admin/comments', { label: 'Zpět na přehled' }) }}

                {{ ui.actions([
                    {
                        type: 'button',
                        button_type: 'submit',
                        form: 'commentForm',
                        label: 'Uložit změny',
                        variant: 'primary',
                        icon: 'bi-save'
                    },
                    {
                        type: 'form',
                        action: '/admin/comments/' ~ comment.id ~ '/delete',
                        label: 'Smazat komentář',
                        variant: 'danger',
                        icon: 'bi-trash',
                        confirm: 'Opravdu smazat komentář?',
                        attributes: {
                            'data-confirm-title': 'Trvalé smazání'
                        }
                    }
                ]) }}
            </div>
        </div>
    </div>
{% endblock %}
