<div class="card shadow-sm h-100">
    <div class="card-header d-flex align-items-center justify-content-between">
        <span class="fw-semibold">Termy</span>
        <span class="badge text-bg-light">{{ items|length }}</span>
    </div>
    <div class="list-group list-group-flush">
        {% if items is empty %}
            <div class="list-group-item text-muted">Žádné výsledky.</div>
        {% else %}
            {% for item in items %}
                <a href="/admin/terms/{{ item.id }}/edit" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <div class="fw-semibold">{{ item.name }}</div>
                            <div class="small text-muted">{{ item.type }} · {{ item.slug }}</div>
                        </div>
                        <i class="bi bi-chevron-right text-muted"></i>
                    </div>
                </a>
            {% endfor %}
        {% endif %}
    </div>
</div>
