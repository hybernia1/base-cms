<div class="card shadow-sm h-100">
    <div class="card-header d-flex align-items-center justify-content-between">
        <span class="fw-semibold">Média</span>
        <span class="badge text-bg-light">{{ items|length }}</span>
    </div>
    <div class="list-group list-group-flush">
        {% if items is empty %}
            <div class="list-group-item text-muted">Žádné výsledky.</div>
        {% else %}
            {% for item in items %}
                <a href="/{{ item.path }}/{{ item.webp_filename ?: item.filename }}" class="list-group-item list-group-item-action" target="_blank" rel="noopener">
                    <div class="d-flex gap-3 align-items-center">
                        <div class="ratio ratio-1x1 rounded overflow-hidden" style="width: 60px; max-width: 60px;">
                            <img src="/{{ item.path }}/{{ item.webp_filename ?: item.filename }}" alt="{{ item.original_name }}" class="w-100 h-100 object-fit-cover">
                        </div>
                        <div class="flex-fill">
                            <div class="fw-semibold">{{ item.original_name }}</div>
                            <div class="small text-muted">{{ item.mime_type }} · {{ item.size }} B</div>
                        </div>
                        <i class="bi bi-box-arrow-up-right text-muted"></i>
                    </div>
                </a>
            {% endfor %}
        {% endif %}
    </div>
</div>
