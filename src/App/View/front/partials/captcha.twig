<div class="mb-3" data-captcha-wrapper>
    <label class="form-label" for="captcha_input_{{ context }}">Opište text z obrázku</label>
    <div class="d-flex align-items-center gap-3 flex-wrap">
        <img src="{{ src }}" alt="Captcha" class="border rounded" width="{{ width|default(180) }}" height="{{ height|default(50) }}" loading="lazy" data-captcha-image>
        <button type="button" class="btn btn-outline-secondary btn-sm" data-captcha-refresh>
            <i class="bi bi-arrow-clockwise"></i> Načíst nový obrázek
        </button>
    </div>
    <input type="text" class="form-control mt-2" name="captcha" id="captcha_input_{{ context }}" autocomplete="off" required {% if disabled %}disabled{% endif %}>
    {% if error %}
        <div class="text-danger small mt-1">{{ error }}</div>
    {% endif %}
</div>
