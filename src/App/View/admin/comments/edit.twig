{% extends 'admin/layout.twig' %}

{% set current_menu = 'comments' %}
{% block title %}Detail komentáře | Administrace{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-3">
        <div>
            <h1 class="h4 mb-0">Detail komentáře</h1>
            <p class="text-muted mb-0">Upravit text, autora nebo stav komentáře.</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between flex-wrap gap-2 mb-4">
                <div class="text-muted small">
                    <div>Vytvořeno: {{ comment.created_at|date('j. n. Y H:i') }}</div>
                    <div>Upraveno: {{ comment.updated_at|date('j. n. Y H:i') }}</div>
                </div>
                <div class="text-end">
                    <a href="/admin/comments" class="btn btn-sm btn-outline-secondary">Zpět na přehled</a>
                </div>
            </div>

            {% if content %}
                <div class="alert alert-light border d-flex justify-content-between align-items-start">
                    <div>
                        <div class="fw-semibold">{{ content.title }}</div>
                        <div class="text-muted small">Typ: {{ content.type }}</div>
                    </div>
                    <a href="/admin/content/{{ content_slug ?: content.type }}/{{ content.id }}/edit" class="btn btn-sm btn-outline-primary">Otevřít obsah</a>
                </div>
            {% endif %}

            <form method="post" action="/admin/comments/{{ comment.id }}/edit" class="mt-3">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label" for="author_name">Autor</label>
                        <input type="text" name="author_name" id="author_name" class="form-control" value="{{ comment.author_name }}" required>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label" for="author_email">E-mail</label>
                        <input type="email" name="author_email" id="author_email" class="form-control" value="{{ comment.author_email }}" required>
                    </div>
                </div>

                <div class="mt-3">
                    <label class="form-label" for="body">Text komentáře</label>
                    <textarea name="body" id="body" class="form-control" rows="5" required>{{ comment.body }}</textarea>
                </div>

                <div class="mt-3">
                    <label class="form-label" for="status">Stav</label>
                    <select name="status" id="status" class="form-select">
                        {% for status_item in statuses %}
                            <option value="{{ status_item }}" {% if status_item == comment.status %}selected{% endif %}>
                                {{ status_item == 'approved' ? 'Schváleno' : 'Čeká na schválení' }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="d-flex justify-content-end align-items-center mt-4">
                    <button type="submit" class="btn btn-primary">Uložit změny</button>
                </div>
            </form>

            <form method="post" action="/admin/comments/{{ comment.id }}/delete" onsubmit="return confirm('Opravdu smazat komentář?');" class="mt-2 text-end">
                <button type="submit" class="btn btn-outline-danger">Smazat komentář</button>
            </form>
        </div>
    </div>
{% endblock %}
