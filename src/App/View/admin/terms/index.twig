{% extends 'admin/layout.twig' %}

{% set current_menu = current_menu|default('terms') %}

{% block title %}Termy | Administrace{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="h3 mb-0">Termy{% if current_term_type %} – {{ current_term_type.label|default(current_term_type.key) }}{% endif %}</h1>
            {% if current_term_type %}
                <div class="text-muted small">Filtrované podle typu {{ current_term_type.label|default(current_term_type.key) }}.</div>
            {% endif %}
        </div>
        <a href="/admin/terms/create{% if current_term_type %}?type={{ current_term_type.key }}{% endif %}" class="btn btn-primary">Nový term</a>
    </div>

    <form method="get" class="row gy-2 gx-3 align-items-center mb-3">
        <div class="col-md-6">
            <label class="form-label" for="termFilter">Hledat podle názvu nebo slugu</label>
            <div class="input-group">
                <input type="text" class="form-control" id="termFilter" name="q" value="{{ search_query }}" placeholder="Např. značka">
                <button class="btn btn-outline-secondary" type="submit">Filtrovat</button>
                {% if search_query %}
                    <a class="btn btn-outline-danger" href="{% if current_term_type_key %}/admin/terms/type/{{ current_term_type_key }}{% else %}/admin/terms{% endif %}">Vymazat</a>
                {% endif %}
            </div>
        </div>
        <div class="col-md-3">
            <label class="form-label" for="termsPerPage">Na stránku</label>
            <select class="form-select" id="termsPerPage" name="per_page" onchange="this.form.submit()">
                {% for option in [10, 20, 50] %}
                    <option value="{{ option }}" {% if pagination.per_page == option %}selected{% endif %}>{{ option }}</option>
                {% endfor %}
            </select>
        </div>
    </form>

    {% if items is empty %}
        <div class="alert alert-info">Zatím zde nejsou žádné termy.</div>
    {% else %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Typ</th>
                        <th>Slug</th>
                        <th>Typy obsahu</th>
                        <th>Upraveno</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td class="fw-semibold">{{ item.name }}</td>
                            <td>{{ types[item.type]|default(item.type) }}</td>
                            <td><code>{{ item.slug }}</code></td>
                            <td>
                                {% if item.allowed_for is iterable and item.allowed_for|length > 0 %}
                                    {% for typeKey in item.allowed_for %}
                                        <span class="badge text-bg-light text-body border">{{ content_types[typeKey].name|default(typeKey) }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span class="text-muted small">Vše</span>
                                {% endif %}
                            </td>
                            <td>{{ item.updated_at|date('j. n. Y H:i') }}</td>
                            <td class="text-end">
                                <a href="/admin/terms/{{ item.id }}/edit" class="btn btn-sm btn-outline-primary">Upravit</a>
                                <form action="/admin/terms/{{ item.id }}/delete" method="post" class="d-inline" data-confirm="Opravdu smazat tento term?" data-ajax data-ajax-remove="tr">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Smazat</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% set termBasePath = current_term_type_key ? '/admin/terms/type/' ~ current_term_type_key : '/admin/terms' %}
        {% include 'admin/partials/pagination.twig' with { pagination: pagination, filters: filters, base_path: termBasePath } %}
    {% endif %}
{% endblock %}
