{% extends 'admin/layout.twig' %}

{% set current_menu = current_type.slug %}

{% block title %}{{ heading }} | Administrace{% endblock %}

{% block body %}
    <h1 class="h3 mb-4">{{ heading }}</h1>

    <form method="post" action="{{ form_action }}" class="mb-4" enctype="multipart/form-data" id="contentForm">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <label for="title" class="form-label">Název</label>
                            <input type="text" name="title" id="title" class="form-control {% if errors.title %}is-invalid{% endif %}" value="{{ values.title }}">
                            {% if errors.title %}
                                <div class="invalid-feedback">{{ errors.title }}</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label for="slug" class="form-label">Slug</label>
                            <input type="text" name="slug" id="slug" class="form-control {% if errors.slug %}is-invalid{% endif %}" value="{{ values.slug }}" placeholder="např. muj-prispevek">
                            {% if errors.slug %}
                                <div class="invalid-feedback">{{ errors.slug }}</div>
                            {% else %}
                                <div class="form-text">Pokud necháš prázdné, vytvoří se automaticky z názvu.</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label for="body" class="form-label">Text</label>
                            <textarea name="body" id="body" rows="8" class="form-control">{{ values.body }}</textarea>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm mb-3">
                    <div class="card-header fw-semibold">Publikace</div>
                    <div class="card-body">
                        <label for="status" class="form-label">Stav</label>
                        <select name="status" id="status" class="form-select {% if errors.status %}is-invalid{% endif %}">
                            <option value="draft" {% if values.status == 'draft' %}selected{% endif %}>Draft</option>
                            <option value="published" {% if values.status == 'published' %}selected{% endif %}>Publikováno</option>
                        </select>
                        {% if errors.status %}
                            <div class="invalid-feedback d-block">{{ errors.status }}</div>
                        {% endif %}
                        <div class="text-muted small mt-2">Drafty se na webu nezobrazí, dokud je nepřepneš na publikované.</div>
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header fw-semibold">Náhledový obrázek</div>
                    <div class="card-body">
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            <select name="thumbnail_id" id="thumbnailSelect" class="form-select" style="max-width: 320px;">
                                <option value="">Vyberte z médií</option>
                                {% for mediaItem in media %}
                                    {% if mediaItem.is_image %}
                                        <option value="{{ mediaItem.id }}" data-preview="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" {% if values.thumbnail_id == mediaItem.id %}selected{% endif %}>
                                            {{ mediaItem.original_name ?: mediaItem.filename }}
                                        </option>
                                    {% endif %}
                                {% endfor %}
                            </select>
                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#mediaLibraryModal">Otevřít knihovnu médií</button>
                        </div>
                        <div id="thumbnailPreview" class="border rounded p-2 bg-light" style="max-width: 320px;{% if not values.thumbnail_id %} display:none;{% endif %}">
                            {% if values.thumbnail_id %}
                                {% for mediaItem in media %}
                                    {% if mediaItem.id == values.thumbnail_id %}
                                        <img src="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" class="img-fluid" alt="{{ mediaItem.alt }}">
                                        <div class="small mt-1 text-muted">{{ mediaItem.original_name ?: mediaItem.filename }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="form-text">Vyberte existující obrázek nebo použijte knihovnu médií pro nahrání.</div>
                        {% if errors.thumbnail %}
                            <div class="text-danger small">{{ errors.thumbnail }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header fw-semibold">Termy a štítky</div>
                    <div class="card-body">
                        {% if allowed_term_types is not empty %}
                            <label class="form-label" for="termPicker">Štítky / kategorie</label>
                            <input id="termPicker" class="form-control" placeholder="Začni psát a vyber term" autocomplete="off">
                            <div class="form-text d-flex flex-wrap gap-2 align-items-center mt-2">
                                <span>Nové termy se uloží jako</span>
                                <select id="termTypeSelect" class="form-select form-select-sm w-auto">
                                    {% for typeKey, typeDef in allowed_term_types %}
                                        <option value="{{ typeKey }}">{{ typeDef.label|default(typeKey) }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="text-danger small mt-2 {% if not errors.terms %}d-none{% endif %}" id="termPickerErrors">{{ errors.terms }}</div>
                            <div id="termHiddenContainer"></div>
                        {% else %}
                            <div class="text-muted">Pro tento typ obsahu nejsou povolené žádné termy.</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="/admin/content/{{ current_type.slug }}" class="btn btn-outline-secondary">Zpět</a>
            <button class="btn btn-primary" type="submit">Uložit</button>
        </div>
    </form>

    {% if content_id is defined %}
        <form action="/admin/content/{{ current_type.slug }}/{{ content_id }}/delete" method="post" data-confirm="Opravdu smazat tento obsah?">
            <button class="btn btn-outline-danger" type="submit">Smazat</button>
        </form>
    {% endif %}

    <div class="modal fade" id="mediaLibraryModal" tabindex="-1" aria-labelledby="mediaLibraryLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mediaLibraryLabel">Knihovna médií</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body">
                    <form id="mediaUploadForm" class="row g-2 align-items-end mb-3" enctype="multipart/form-data">
                        <div class="col-md-5">
                            <label class="form-label" for="libraryFile">Soubor</label>
                            <input type="file" id="libraryFile" name="file" class="form-control" required>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label" for="libraryAlt">Alt text / popisek</label>
                            <input type="text" id="libraryAlt" name="alt" class="form-control" placeholder="Volitelný popis">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" type="submit">Nahrát</button>
                        </div>
                        <div class="col-12">
                            <div class="small text-muted">Nahrané soubory se okamžitě přidají do knihovny bez obnovení stránky.</div>
                        </div>
                    </form>

                    <div class="row row-cols-2 row-cols-md-4 row-cols-xl-6 g-3" id="mediaLibraryGrid">
                        {% for mediaItem in media %}
                            {% if mediaItem.is_image %}
                                <div class="col">
                                    <div class="card h-100 media-card" role="button" tabindex="0" data-media-id="{{ mediaItem.id }}" data-media-url="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" data-media-label="{{ mediaItem.original_name ?: mediaItem.filename }}">
                                        <img src="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" class="card-img-top" alt="{{ mediaItem.alt }}">
                                        <div class="card-body p-2">
                                            <div class="small text-truncate" title="{{ mediaItem.original_name ?: mediaItem.filename }}">{{ mediaItem.original_name ?: mediaItem.filename }}</div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="alert alert-info mt-3" id="mediaLibraryEmpty" {% if media is not empty %}style="display:none;"{% endif %}>Zatím žádné obrázky.</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavřít</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script>
        const termOptions = [
            {% for typeKey, typeDef in allowed_term_types %}
                {% for term in terms[typeKey]|default([]) %}
                    {
                        value: "{{ term.id }}",
                        name: "{{ term.name|e('js') }}",
                        type: "{{ term.type }}",
                        type_label: "{{ typeDef.label|default(typeKey)|e('js') }}",
                    },
                {% endfor %}
            {% endfor %}
        ];
        const selectedTermIds = {{ selected_terms|json_encode|raw }};

        const thumbnailSelect = document.getElementById('thumbnailSelect');
        const thumbnailPreview = document.getElementById('thumbnailPreview');
        const mediaGrid = document.getElementById('mediaLibraryGrid');
        const mediaModalEl = document.getElementById('mediaLibraryModal');
        const mediaEmptyAlert = document.getElementById('mediaLibraryEmpty');

        function updatePreview(url, label) {
            if (!thumbnailPreview) return;
            if (!url) {
                thumbnailPreview.style.display = 'none';
                thumbnailPreview.innerHTML = '';
                return;
            }

            thumbnailPreview.style.display = '';
            thumbnailPreview.innerHTML = `<img src="${url}" class="img-fluid" alt="">` +
                `<div class="small mt-1 text-muted">${label || ''}</div>`;
        }

        if (thumbnailSelect) {
            thumbnailSelect.addEventListener('change', function () {
                const option = thumbnailSelect.selectedOptions[0];
                const previewUrl = option ? option.dataset.preview : '';
                updatePreview(previewUrl || '', option ? option.textContent : '');
            });

            if (thumbnailSelect.value) {
                const option = thumbnailSelect.selectedOptions[0];
                if (option && option.dataset.preview) {
                    updatePreview(option.dataset.preview, option.textContent);
                }
            }
        }

        function setSelectedThumbnail(id, url, label) {
            if (!thumbnailSelect) return;
            let option = thumbnailSelect.querySelector(`option[value="${id}"]`);
            if (!option) {
                option = document.createElement('option');
                option.value = id;
                thumbnailSelect.appendChild(option);
            }
            option.textContent = label || `Médium #${id}`;
            option.dataset.preview = url;
            thumbnailSelect.value = id;
            updatePreview(url, option.textContent);
        }

        if (mediaGrid) {
            mediaGrid.addEventListener('click', function (event) {
                const card = event.target.closest('.media-card');
                if (!card) return;

                const id = card.dataset.mediaId;
                const url = card.dataset.mediaUrl;
                const label = card.dataset.mediaLabel;
                setSelectedThumbnail(id, url, label);

                if (mediaModalEl) {
                    const modalInstance = bootstrap.Modal.getInstance(mediaModalEl);
                    if (modalInstance) {
                        modalInstance.hide();
                    }
                }
            });

            if (mediaEmptyAlert) {
                mediaEmptyAlert.style.display = mediaGrid.querySelector('.media-card') ? 'none' : '';
            }
        }

        const mediaUploadForm = document.getElementById('mediaUploadForm');
        if (mediaUploadForm) {
            mediaUploadForm.addEventListener('submit', async function (event) {
                event.preventDefault();

                const formData = new FormData(mediaUploadForm);
                try {
                    const response = await fetch('/admin/media/upload', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'Accept': 'application/json'
                        }
                    });

                    const result = await response.json();
                    if (!response.ok || result.error) {
                        adminDialog.alert(result.error || 'Nahrávání se nezdařilo.', {variant: 'danger'});
                        return;
                    }

                    if (!result.is_image) {
                        adminDialog.alert('Vybraný soubor není obrázek.', {variant: 'warning'});
                        return;
                    }

                    appendMediaCard(result.id, result.path, result.original_name);
                    setSelectedThumbnail(result.id, result.path, result.original_name);
                    mediaUploadForm.reset();
                } catch (error) {
                    adminDialog.alert('Nahrávání se nezdařilo.', {variant: 'danger'});
                }
            });
        }

        function appendMediaCard(id, url, label) {
            if (!mediaGrid) return;
            if (mediaEmptyAlert) {
                mediaEmptyAlert.style.display = 'none';
            }

            const col = document.createElement('div');
            col.className = 'col';
            col.innerHTML = `
                <div class="card h-100 media-card" role="button" tabindex="0" data-media-id="${id}" data-media-url="${url}" data-media-label="${label}">
                    <img src="${url}" class="card-img-top" alt="">
                    <div class="card-body p-2">
                        <div class="small text-truncate" title="${label}">${label}</div>
                    </div>
                </div>
            `;
            mediaGrid.prepend(col);
        }

        const termPicker = document.getElementById('termPicker');
        const termTypeSelect = document.getElementById('termTypeSelect');
        const termHiddenContainer = document.getElementById('termHiddenContainer');
        const defaultTermType = termTypeSelect?.value || (termOptions[0]?.type ?? '');

        const syncHiddenTerms = (tags) => {
            if (!termHiddenContainer) return;
            termHiddenContainer.innerHTML = '';

            tags.forEach((tag) => {
                const type = tag.type || defaultTermType;
                const value = Number(tag.value);
                if (!type || Number.isNaN(value)) return;

                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = `terms[${type}][]`;
                input.value = String(value);
                termHiddenContainer.appendChild(input);
            });
        };

        const enhanceTagData = (tag) => ({
            value: tag.value,
            name: tag.name || tag.value,
            type: tag.type || defaultTermType,
            type_label: tag.type_label || tag.type || defaultTermType,
        });

        if (termPicker && typeof Tagify !== 'undefined' && termOptions.length) {
            const tagify = new Tagify(termPicker, {
                whitelist: termOptions,
                enforceWhitelist: false,
                dropdown: {
                    enabled: 0,
                    maxItems: 12,
                    searchKeys: ['name', 'type_label'],
                },
                editTags: false,
                duplicates: false,
                templates: {
                    tag: (tagData) => {
                        const typeLabel = tagData.type_label || tagData.type || '';
                        return `<tag title="${tagData.name}" contenteditable="false" spellcheck="false" class="tagify__tag" ${tagData["aria-label"] ? `aria-label="${tagData["aria-label"]}"` : ''}>`
                            + `<x title="Odstranit" class="tagify__tag__removeBtn"></x>`
                            + `<div>`
                            + `<span class="tagify__tag-text">${Tagify.escapeHTML(tagData.name)}</span>`
                            + `<span class="badge bg-secondary ms-2">${Tagify.escapeHTML(typeLabel)}</span>`
                            + `</div>`
                            + `</tag>`;
                    },
                    dropdownItem: (item) => {
                        const typeLabel = item.type_label || item.type || '';
                        return `<div class="tagify__dropdown__item">`
                            + `<span>${Tagify.escapeHTML(item.name)}</span>`
                            + `<span class="badge bg-light text-muted border ms-2">${Tagify.escapeHTML(typeLabel)}</span>`
                            + `</div>`;
                    },
                },
                originalInputValueFormat: (values) => JSON.stringify(values.map(enhanceTagData)),
            });

            const initialTags = termOptions.filter((option) => selectedTermIds.includes(Number(option.value)));
            if (initialTags.length) {
                tagify.addTags(initialTags);
                syncHiddenTerms(tagify.value);
            }

            const createTerm = async (tagData) => {
                const name = (tagData.name || tagData.value || '').trim();
                const type = tagData.type || termTypeSelect?.value || defaultTermType;

                if (!name || !type) {
                    return Promise.reject('Vyplň název termu.');
                }

                const formData = new FormData();
                formData.append('name', name);
                formData.append('type', type);

                const response = await fetch('/admin/content/{{ current_type.slug }}/terms', {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest',
                        'Accept': 'application/json',
                    },
                });

                const result = await response.json();
                if (!response.ok || result.error) {
                    throw new Error(result.error || 'Vytvoření termu se nezdařilo.');
                }

                return {
                    value: String(result.id),
                    name: result.name,
                    type: result.type,
                    type_label: result.type_label || result.type,
                };
            };

            const updateTag = (tagElm, data) => {
                tagify.replaceTag(tagElm, enhanceTagData(data));
                syncHiddenTerms(tagify.value);
            };

            tagify.on('add', async (event) => {
                const tagData = enhanceTagData(event.detail.data || {});

                if (tagData.value && !Number.isNaN(Number(tagData.value))) {
                    syncHiddenTerms(tagify.value);
                    return;
                }

                try {
                    const created = await createTerm(tagData);
                    termOptions.push(created);
                    updateTag(event.detail.tag, created);
                } catch (error) {
                    tagify.removeTags(event.detail.tag);
                    adminDialog.alert(error.message || 'Vytvoření termu se nezdařilo.', {variant: 'danger'});
                }
            });

            tagify.on('remove', () => {
                syncHiddenTerms(tagify.value);
            });

            tagify.on('invalid', (event) => {
                const errorBox = document.getElementById('termPickerErrors');
                if (errorBox) {
                    errorBox.textContent = event.detail.message || 'Term nelze přidat.';
                    errorBox.classList.remove('d-none');
                }
            });
        }
    </script>
{% endblock %}
