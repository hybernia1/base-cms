{% import 'admin/partials/components.twig' as ui %}

<div class="card-body p-0">
    <div class="table-responsive">
        <table class="table mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>E-mail</th>
                    <th>Role</th>
                    <th>Stav</th>
                    <th class="text-end">Akce</th>
                </tr>
            </thead>
            <tbody>
            {% if users %}
                {% for user in users %}
                    <tr>
                        <td>{{ user.email }}</td>
                        <td>{{ roles[user.role] ?? user.role }}</td>
                        <td>
                            {% if user.is_banned %}
                                <span class="badge bg-danger">Zablokován</span>
                                {% if user.ban_reason %}<div class="small text-muted">{{ user.ban_reason }}</div>{% endif %}
                            {% else %}
                                <span class="badge bg-success">Aktivní</span>
                            {% endif %}
                        </td>
                        <td class="text-end">
                            <div class="d-flex flex-wrap justify-content-end gap-2 align-items-center">
                                {{ ui.actions([
                                    {
                                        type: 'link',
                                        href: '/admin/users/' ~ user.id ~ '/edit',
                                        label: 'Upravit',
                                        variant: 'primary',
                                        icon: 'bi-pencil'
                                    },
                                      {
                                          type: 'form',
                                          action: '/admin/users/' ~ user.id ~ '/delete',
                                          label: 'Smazat',
                                          variant: 'danger',
                                          confirm: 'Opravdu smazat tohoto uživatele?',
                                          icon: 'bi-trash',
                                          ajax: true,
                                          hidden: { redirect: pagination.current_url }
                                      }
                                  ]) }}
                                  {% if user.is_banned %}
                                      <form method="post" action="/admin/users/{{ user.id }}/unban" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success">Odblokovat</button>
                                    </form>
                                {% else %}
                                    <form method="post" action="/admin/users/{{ user.id }}/ban" class="d-inline d-flex align-items-center gap-2">
                                        <input type="text" name="reason" class="form-control form-control-sm w-auto" placeholder="Důvod" aria-label="Důvod blokace">
                                        <button type="submit" class="btn btn-sm btn-outline-warning">Zablokovat</button>
                                    </form>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            {% else %}
                <tr>
                    <td colspan="4" class="text-center p-4 text-muted">Zatím žádní uživatelé.</td>
                </tr>
            {% endif %}
            </tbody>
        </table>
    </div>
</div>
{{ ui.pagination(pagination) }}
