{% extends 'admin/layout.twig' %}

{% set current_menu = 'email_templates' %}

{% block title %}Upravit šablonu | Administrace{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-3">
        <h1 class="h4 mb-0">Upravit šablonu: {{ template.event }}</h1>
        <a href="/admin/email-templates" class="btn btn-outline-secondary ms-auto">Zpět</a>
    </div>

    <form method="post" action="/admin/email-templates/{{ template.event }}" class="card shadow-sm">
        <div class="card-body p-4">
            <div class="mb-3">
                <label class="form-label">Předmět</label>
                <input type="text" name="subject" value="{{ template.subject }}" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">HTML obsah</label>
                <textarea name="body_html" class="form-control" rows="6" required>{{ template.body_html }}</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Textová varianta</label>
                <textarea name="body_text" class="form-control" rows="4" required>{{ template.body_text }}</textarea>
            </div>

            <div class="alert alert-info">
                <div class="fw-bold">Dostupné proměnné:</div>
                <ul class="mb-0">
                    <li><code>{{ '{{site_name}}' }}</code></li>
                    <li><code>{{ '{{email}}' }}</code></li>
                    <li><code>{{ '{{reason}}' }}</code></li>
                    <li><code>{{ '{{reset_link}}' }}</code></li>
                </ul>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between align-items-center">
            <a href="/admin/email-templates" class="btn btn-outline-secondary">Zpět</a>
            <button class="btn btn-primary" type="submit">Uložit</button>
        </div>
    </form>
{% endblock %}
