{% extends 'admin/layout.twig' %}

{% import 'admin/partials/components.twig' as ui %}
{% import 'admin/partials/meta_fields.twig' as meta_fields %}

{% set current_menu = 'users' %}

{% block title %}{{ heading|default('Uživatel') }} | Administrace{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-3 gap-2">
        <h1 class="h4 mb-0">{{ heading|default('Uživatel') }}</h1>
        {{ ui.back_button('/admin/users', { label: 'Zpět na seznam' }) }}
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" action="{{ form_action }}" id="userForm">
                <div class="mb-3">
                    <label class="form-label">Přezdívka</label>
                    <input type="text" name="nickname" class="form-control" value="{{ values.nickname|default('') }}" placeholder="Např. Jan Novák">
                </div>

                <div class="mb-3">
                    <label class="form-label">E-mail</label>
                    <input type="email" name="email" class="form-control" value="{{ values.email|default('') }}" required>
                    {% if errors.email %}
                        <div class="text-danger small mt-1">{{ errors.email }}</div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label class="form-label">Role</label>
                    <select name="role" class="form-select" required>
                        <option value="">-- vyber roli --</option>
                        {% for value, label in roles %}
                            <option value="{{ value }}" {% if values.role|default('') == value %}selected{% endif %}>{{ label }}</option>
                        {% endfor %}
                    </select>
                    {% if errors.role %}
                        <div class="text-danger small mt-1">{{ errors.role }}</div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label class="form-label">Heslo</label>
                    <input type="password" name="password" class="form-control" {% if not user_id %}required{% endif %}>
                    <div class="form-text">
                        {% if user_id %}
                            Ponech prázdné, pokud nechceš měnit heslo.
                        {% else %}
                            Minimálně 6 znaků.
                        {% endif %}
                    </div>
                    {% if errors.password %}
                        <div class="text-danger small mt-1">{{ errors.password }}</div>
                    {% endif %}
                </div>

                {{ meta_fields.fields(meta_keys, meta_values, {
                    title: 'Meta údaje',
                    help: 'Doplň doprovodné informace k uživateli. Prázdná pole se smažou.',
                    show_empty: true
                }) }}

                <div class="d-flex justify-content-between align-items-center mt-3 flex-wrap gap-2">
                    {{ ui.back_button('/admin/users', { label: 'Zpět na seznam' }) }}
                    {{ ui.actions([
                        {
                            type: 'button',
                            button_type: 'submit',
                            label: 'Uložit',
                            variant: 'primary',
                            icon: 'bi-save'
                        }
                    ]) }}
                </div>
            </form>
        </div>
    </div>

    {% if user_id is defined %}
        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h2 class="h5">Stav účtu</h2>
                {% if values.is_banned %}
                    <p class="text-danger mb-2">Uživatel je aktuálně zablokován.</p>
                    {% if values.ban_reason %}<p class="mb-3"><strong>Důvod:</strong> {{ values.ban_reason }}</p>{% endif %}
                    {{ ui.actions([
                        {
                            type: 'form',
                            action: '/admin/users/' ~ user_id ~ '/unban',
                            label: 'Zrušit blokaci',
                            variant: 'success',
                            icon: 'bi-unlock',
                            confirm: 'Zrušit blokaci tohoto uživatele?'
                        }
                    ]) }}
                {% else %}
                    <p class="text-success">Účet je aktivní.</p>
                    <form method="post" action="/admin/users/{{ user_id }}/ban" class="mt-2">
                        <div class="mb-2">
                            <label class="form-label">Důvod blokace</label>
                            <input type="text" name="reason" class="form-control" placeholder="Nepovinné">
                        </div>
                        {{ ui.actions([
                            {
                                type: 'button',
                                button_type: 'submit',
                                label: 'Zablokovat účet',
                                variant: 'warning',
                                icon: 'bi-lock',
                                confirm: 'Opravdu zablokovat tento účet?'
                            }
                        ]) }}
                    </form>
                {% endif %}
            </div>
        </div>

        <div class="card shadow-sm mt-4">
            <div class="card-body">
                <h2 class="h5">Přihlášení</h2>
                <p class="mb-3">
                    <strong>Poslední přihlášení:</strong>
                    {% if values.last_login_at %}
                        {{ values.last_login_at }}
                        {% if values.last_login_ip %}
                            z IP {{ values.last_login_ip }}
                        {% endif %}
                    {% else %}
                        zatím žádné
                    {% endif %}
                </p>

                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead>
                            <tr>
                                <th scope="col">Datum</th>
                                <th scope="col">IP adresa</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% if login_logs is not empty %}
                                {% for log in login_logs %}
                                    <tr>
                                        <td>{{ log.created_at }}</td>
                                        <td>{{ log.ip_address }}</td>
                                    </tr>
                                {% endfor %}
                            {% else %}
                                <tr>
                                    <td colspan="2" class="text-muted">Žádné záznamy o přihlášení.</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}
