{# src/App/View/front/layout.twig #}
<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{{ site.name|default('Můj web') }}{% endblock %}</title>
    {% if seo is defined and not seo.indexing_enabled %}
        <meta name="robots" content="noindex, nofollow">
    {% endif %}
    {% if current_url is defined %}
        <link rel="canonical" href="{{ current_url }}">
    {% endif %}
    {% if site.favicon and site.favicon.url %}
        <link rel="icon" href="{{ site.favicon.url }}" type="{{ site.favicon.mime_type ?: 'image/x-icon' }}">
    {% endif %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/assets/css/admin-bar.css">
    {% if hooks is defined and hooks.head is defined %}
        {% for snippet in hooks.head %}
            {{ snippet|raw }}
        {% endfor %}
    {% endif %}
    {% block head_extra %}{% endblock %}
    <style>
        :root {
            --surface: #ffffff;
            --muted: #6b7482;
            --stroke: #edf1f6;
            --radius: 12px;
            --sand: #f8fafc;
            --ink: #0f1a2b;
            --accent: #3f70c2;
        }
        body {
            background-color: var(--sand);
            color: var(--ink);
            font-size: 16px;
            font-family: 'Inter', system-ui, -apple-system, "Segoe UI", sans-serif;
            line-height: 1.7;
            letter-spacing: 0.01em;
        }
        .btn-primary {
            background-color: var(--accent);
            border-color: var(--accent);
            box-shadow: none;
        }
        .btn-primary:hover,
        .btn-primary:focus {
            background-color: #365fa5;
            border-color: #365fa5;
        }
        .btn-outline-dark {
            color: var(--ink);
            border-color: var(--stroke);
            background-color: #fff;
        }
        .btn-outline-dark:hover,
        .btn-outline-dark:focus {
            color: var(--accent);
            border-color: var(--accent);
            background-color: #f1f4fa;
        }
        .avatar {
            width: 44px;
            height: 44px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: #e7f1ff;
            color: var(--accent);
        }
        .avatar-sm { width: 36px; height: 36px; font-size: .9rem; }
        .avatar-lg { width: 80px; height: 80px; font-size: 1.1rem; }
        .avatar img { width: 100%; height: 100%; object-fit: cover; border-radius: 50%; }
        .nav-avatar-link { display: inline-flex; text-decoration: none; }
        a { color: inherit; }
        a:hover, a:focus { color: var(--accent); }
        @media (min-width: 992px) {
            .navbar-nav .dropdown-menu { position: absolute; }
        }
        header {
            background: var(--sand);
            color: var(--ink);
            border-bottom: 1px solid var(--stroke);
        }
        header a { color: var(--ink); text-decoration: none; }
        .navbar { padding: 1rem 0; position: relative; }
        .nav-inner { display: flex; align-items: center; gap: 1.25rem; position: relative; z-index: 2; }
        .site-brand { font-weight: 700; letter-spacing: 2px; font-size: 1rem; text-transform: uppercase; position: relative; z-index: 6; }
        .site-logo { height: 26px; width: auto; }
        .nav-actions { position: relative; z-index: 6; }
        .nav-actions .btn-icon {
            width: 42px;
            height: 42px;
            border-radius: 50%;
            border: 1px solid var(--stroke);
            background: #fff;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            color: var(--ink);
            box-shadow: none;
        }
        .nav-actions .btn-icon:hover,
        .nav-actions .btn-icon:focus {
            border-color: var(--accent);
            color: var(--accent);
            background: #fff;
        }
        .nav-search { gap: .5rem; }
        .nav-search .form-control,
        .nav-search .btn { padding: .55rem .8rem; border-radius: 999px; }
        .nav-link {
            font-weight: 700;
            letter-spacing: .6px;
            text-transform: uppercase;
            font-size: .95rem;
            padding: .35rem .45rem;
            border-radius: 999px;
            transition: background-color .15s ease, color .15s ease;
        }
        .nav-link:hover,
        .nav-link:focus {
            color: var(--accent);
            background: rgba(63, 112, 194, 0.07);
        }
        .nav-link.active {
            color: var(--accent) !important;
            background: rgba(63, 112, 194, 0.12);
        }
        .nav-item + .nav-item { margin-left: .2rem; }
        .nav-search input { background: #fff; border: 1px solid var(--stroke); }
        .nav-search .btn { border-color: var(--stroke); color: var(--ink); }
        .header-search-overlay {
            position: absolute;
            inset: 0;
            background: rgba(255, 255, 255, 0.97);
            backdrop-filter: blur(2px);
            display: none;
            align-items: center;
            z-index: 5;
            border-bottom: 1px solid var(--stroke);
        }
        .header-search-overlay.show { display: flex; }
        .header-search-overlay .nav-search { width: 100%; max-width: 640px; }
        .header-search-overlay .nav-search .form-control { background: #fff; }
        .header-search-overlay .btn-close-search { border: 1px solid var(--stroke); border-radius: 999px; }
        .nav-scroller {
            border-top: 1px solid var(--stroke);
            border-bottom: 1px solid var(--stroke);
            background: #ffffff;
        }
        .nav-scroller-inner {
            overflow-x: auto;
            scrollbar-width: thin;
            padding: .55rem 0;
        }
        .nav-scroller-inner::-webkit-scrollbar { height: 6px; }
        .nav-scroller-inner::-webkit-scrollbar-thumb { background: var(--stroke); border-radius: 999px; }
        .nav-track {
            display: inline-flex;
            gap: .35rem;
            padding: 0 .25rem;
        }
        .nav-pill {
            display: inline-flex;
            align-items: center;
            padding: .35rem .9rem;
            border-radius: 999px;
            border: 1px solid transparent;
            background: transparent;
            font-weight: 700;
            letter-spacing: .45px;
            text-transform: uppercase;
            color: var(--ink);
            white-space: nowrap;
            transition: all .15s ease-in-out;
        }
        .nav-pill:hover,
        .nav-pill:focus {
            color: var(--accent);
            border-color: rgba(63, 112, 194, 0.35);
            background: #fff;
        }
        .nav-pill.active {
            background: #fff;
            border-color: rgba(63, 112, 194, 0.45);
            color: var(--accent);
        }
        @media (max-width: 991.98px) {
            .nav-search { width: 100%; }
            .nav-item + .nav-item { margin-left: 0; }
            .nav-link { padding-left: .35rem; padding-right: .35rem; }
            .nav-inner { flex-direction: row; gap: .85rem; }
        }
        main { padding: 2.25rem 0 2.75rem; }
        footer { padding: 2rem 0; color: var(--muted); font-size: .95rem; border-top: 1px solid var(--stroke); }
        .card { border: 1px solid var(--stroke); border-radius: var(--radius); box-shadow: none; background: #fff; }
        .card-body { padding: 1.25rem 1.35rem; }
        .content-body { max-width: 760px; }
        .content-body p { margin-bottom: 1.15rem; line-height: 1.85; font-size: 1.05rem; }
        .content-body h2, .content-body h3, .content-body h4 { margin-top: 1.2rem; margin-bottom: .6rem; }
        .content-body ul, .content-body ol { padding-left: 1.1rem; }
        .breadcrumb { font-size: .9rem; color: var(--muted); letter-spacing: .5px; text-transform: uppercase; }
        .breadcrumb a { color: var(--ink); text-decoration: none; }
        .breadcrumb a:hover { color: var(--accent); }
        .dropdown-submenu .dropdown-menu { position: static; }
        .dropdown-menu { border-radius: var(--radius); }
        .dropdown-menu .dropdown-menu { margin-left: 0.5rem; }
        .article-stack { background: transparent; }
        .article-list { background: transparent; border: none; padding: 0; }
        .related-posts-card { border: none; box-shadow: none; background: transparent; }
        .related-posts-card .card-body { padding: 0; }
        .related-posts-card .article-row { border: none; background: transparent; padding: 0; }
        .article-list-body { display: flex; flex-direction: column; gap: .9rem; }
        .article-row {
            position: relative;
            padding: 1.2rem;
            border: 1px solid var(--stroke);
            background: linear-gradient(180deg, #ffffff 0%, #f9fbff 100%);
            transition: transform .12s ease, box-shadow .12s ease;
        }
        .article-row:hover { transform: translateY(-1px); box-shadow: 0 8px 20px rgba(19, 12, 4, 0.06); }
        .article-row .stretched-link::after {
            border-radius: var(--radius);
        }
        .article-thumb { width: 200px; height: 200px; background: #f1f4f8; color: var(--ink); font-size: 1.4rem; border-radius: 14px; overflow: hidden; }
        .related-posts-card .article-thumb { width: 100px; height: 100px; }
        .article-thumb img { width: 100%; height: 100%; object-fit: cover; }
        .article-meta { font-size: .95rem; color: var(--muted); letter-spacing: .35px; text-transform: uppercase; }
        .article-title { font-size: clamp(2rem, 3vw, 2.8rem); line-height: 1.15; margin-bottom: .85rem; font-weight: 700; }
        .article-subtitle { font-size: 1.05rem; color: var(--muted); max-width: 720px; }
        .article-figure { margin: 1.45rem 0 1.85rem; }
        .article-figure img { width: 100%; height: auto; object-fit: cover; }
        .article-shell { background: transparent; border: none; box-shadow: none; overflow: visible; max-width: 820px; }
        .badge.text-bg-light { background: #f3ede3 !important; color: var(--ink); border: 1px solid var(--stroke); padding: .45rem .75rem; border-radius: 999px; }
        .article-feature {
            position: relative;
            display: grid;
            grid-template-columns: 1fr;
            gap: 0;
            border: 1px solid var(--stroke);
            overflow: hidden;
            background: #fff;
            box-shadow: none;
        }
        .article-feature-thumb .ratio { height: 100%; }
        .article-feature-thumb img { width: 100%; height: 100%; object-fit: cover; }
        .article-feature-fallback {
            background: #f3f6fa;
            color: var(--ink);
            font-weight: 700;
            font-size: clamp(2rem, 4vw, 2.6rem);
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .article-feature-body { padding: 1.15rem 1.2rem; }
        .article-feature-body .article-meta { margin-bottom: .55rem; }
        .article-feature-title { font-size: clamp(1.7rem, 2.6vw, 2.1rem); line-height: 1.2; margin-bottom: .75rem; }
        .article-feature .article-subtitle { font-size: 1.05rem; line-height: 1.65; }
        @media (min-width: 768px) {
            .navbar { padding: 1.2rem 0; }
            main { padding: 2.65rem 0 3rem; }
            .article-feature {
                grid-template-columns: 1.1fr 1fr;
                align-items: stretch;
                box-shadow: 0 10px 26px rgba(16, 24, 40, 0.07);
            }
            .article-feature-body { padding: 1.6rem 1.8rem; }
            .article-feature .ratio-16x9 { min-height: 280px; }
        }
        @media (max-width: 575.98px) {
            .article-row { padding: 1rem; }
            .article-thumb { width: 88px; height: 88px; }
            .nav-inner { gap: .65rem; }
            .article-title { font-size: clamp(1.8rem, 6vw, 2.2rem); }
        }
        @media (max-width: 767.98px) {
            .article-list { margin-left: 0; margin-right: 0; }
            .content-body { max-width: 100%; }
            .article-list-body { gap: .75rem; }
            .article-row { padding: 1rem; gap: .85rem; }
            .article-thumb { width: 86px; height: 86px; border-radius: 12px; }
        }
        .archive-list { border: none; box-shadow: none; }
        .archive-list .article-feature,
        .archive-list .article-row { border: none; border-radius: 0; box-shadow: none; }
        .archive-list .article-row .stretched-link::after { border-radius: 0; }
        .comment-thread {
            --comment-gap: 1.25rem;
            --comment-indent-size: 36px;
            --comment-avatar-size: 36px;
            --comment-padding-start: 1rem;
            --comment-connector: #cdd8e7;
            display: flex;
            flex-direction: column;
            row-gap: var(--comment-gap);
        }
        .comment-item {
            position: relative;
            margin-left: calc(var(--comment-indent, 0) * var(--comment-indent-size));
            padding: .85rem 1rem .75rem;
            --comment-padding-start-current: var(--comment-padding-start);
        }
        .comment-item.has-parent {
            padding-left: var(--comment-padding-start-current);
        }
        .comment-item.has-parent::before,
        .comment-item.has-parent::after {
            content: '';
            position: absolute;
            left: calc(-1 * var(--comment-indent-size) + var(--comment-padding-start-current) + (var(--comment-avatar-size) / 2));
            border-color: var(--comment-connector);
        }
        .comment-item.has-parent::before {
            top: 0;
            bottom: calc(-1 * var(--comment-gap));
            border-left: 2px solid var(--comment-connector);
        }
        .comment-item.has-parent::after {
            top: calc(var(--comment-avatar-size) / 2);
            width: var(--comment-indent-size);
            border-top: 2px solid var(--comment-connector);
        }
        .comment-inner { display: flex; gap: .95rem; align-items: flex-start; }
        .comment-avatar { flex-shrink: 0; }
        .comment-text { line-height: 1.7; }
        .comment-body .btn-link { color: var(--accent); }
        .comment-body .btn-link:hover,
        .comment-body .btn-link:focus { color: #365fa5; text-decoration: none; }
    </style>
</head>
<body class="{% if admin_bar is defined and admin_bar %}has-admin-bar{% endif %}">
{% import 'admin/partials/admin_bar.twig' as admin_ui %}
{% if admin_bar is defined and admin_bar %}
    {{ admin_ui.admin_bar({
        dashboard_url: admin_bar.dashboard_url,
        edit_url: admin_bar.edit_url|default(null),
        create_links: admin_bar.create_links|default([]),
        user_role_label: admin_bar.user_role_label,
        user_label: admin_bar.user_label,
        user_links: admin_bar.user_links|default([])
    }) }}
{% endif %}
<header>
    <nav class="navbar navbar-light">
        <div class="container nav-inner">
            <a class="navbar-brand site-brand d-flex align-items-center gap-2 mb-0" href="/">
                {% if site.logo and site.logo.url %}
                    <img src="{{ site.logo.url }}" alt="{{ site.logo.alt ?: site.name }}" class="site-logo">
                {% endif %}
                <span>{{ site.name|default('News') }}</span>
            </a>

            {% import _self as nav %}
            {% set nav_items = [] %}
            {% for item in navigation|default([]) %}
                {% if not ((current_user and item.type in ['core_login', 'core_register']) or (not current_user and item.type in ['core_profile', 'core_logout'])) %}
                    {% set nav_items = nav_items|merge([item]) %}
                {% endif %}
            {% endfor %}

            {% if nav_items is empty %}
                {% set nav_items = [
                    {'label': 'World', 'url': '/', 'children': [], 'type': 'core_home', 'open_in_new_tab': false},
                    {'label': 'Politics', 'url': '/' ~ post_archive_slug, 'children': [], 'type': 'archive', 'open_in_new_tab': false},
                    {'label': 'Business', 'url': current_user ? '/profile' : '/login', 'children': [], 'type': current_user ? 'core_profile' : 'core_login', 'open_in_new_tab': false},
                ] %}
            {% endif %}

            <div class="ms-auto d-none d-lg-block">
                <ul class="navbar-nav flex-row gap-1">
                    {% for item in nav_items %}
                        {{ _self.nav_item(item) }}
                    {% endfor %}
                </ul>
            </div>

            <div class="d-flex align-items-center gap-2 nav-actions ms-lg-3">
                <button class="btn btn-icon" type="button" data-action="toggle-search" aria-expanded="false" aria-controls="headerSearchOverlay" aria-label="Otevřít vyhledávání">
                    <i class="bi bi-search"></i>
                </button>
                {% if current_user %}
                    <a class="nav-avatar-link" href="/profile" aria-label="Přejít na profil">
                        <span class="avatar avatar-sm bg-primary-subtle text-primary fw-bold">
                            {% if current_user_avatar and current_user_avatar.url %}
                                <img src="{{ current_user_avatar.url }}" alt="Avatar {{ current_user.nickname ?: current_user.email }}" class="rounded-circle" loading="lazy">
                            {% else %}
                                {{ current_user_avatar.initials|default('PR') }}
                            {% endif %}
                        </span>
                    </a>
                {% else %}
                    <a class="btn btn-icon" href="/login" aria-label="Přihlásit se">
                        <i class="bi bi-person"></i>
                    </a>
                {% endif %}
            </div>
        </div>
        <div class="header-search-overlay" id="headerSearchOverlay" hidden>
            <div class="container d-flex align-items-center gap-3 py-3 py-lg-0">
                <form class="d-flex nav-search flex-grow-1" role="search" method="get" action="/search">
                    <label class="visually-hidden" for="navSearch">Hledat</label>
                    <input class="form-control form-control-sm me-2" type="search" name="q" id="navSearch" placeholder="Hledat…" aria-label="Hledat" minlength="2" required>
                    <button class="btn btn-outline-dark btn-sm" type="submit" aria-label="Odeslat vyhledávání" title="Hledat">
                        <i class="bi bi-search" aria-hidden="true"></i>
                    </button>
                </form>
                <button class="btn btn-icon btn-close-search" type="button" data-action="close-search" aria-label="Zavřít vyhledávání">
                    <i class="bi bi-x"></i>
                </button>
            </div>
        </div>
    </nav>

    <div class="nav-scroller d-lg-none">
        <div class="container nav-scroller-inner">
            <div class="nav-track">
                {% for item in nav_items %}
                    {% set active = current_url is defined and current_url == item.url %}
                    {% set target = item.open_in_new_tab ? '_blank' : '_self' %}
                    {% set rel = item.open_in_new_tab ? 'noopener' : null %}
                    <a class="nav-pill{% if active %} active{% endif %}" href="{{ item.url }}" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>{{ item.label }}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</header>

<main class="container py-2">
    {% if flash_success %}
        {% for msg in flash_success %}
            <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
    {% endif %}
    {% if flash_error %}
        {% for msg in flash_error %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}
    {% endif %}

    {% set breadcrumb_items = (breadcrumbs is defined and breadcrumbs|length > 1) ? breadcrumbs|slice(0, breadcrumbs|length - 1) : [] %}
    {% if breadcrumbs_enabled and breadcrumb_items %}
        <nav aria-label="Drobečková navigace" class="mb-3">
            <ol class="breadcrumb mb-0 bg-transparent p-0">
                {% for crumb in breadcrumb_items %}
                    {% if crumb.url is defined and crumb.url %}
                        <li class="breadcrumb-item"><a href="{{ crumb.url }}">{{ crumb.label }}</a></li>
                    {% else %}
                        <li class="breadcrumb-item active" aria-current="page">{{ crumb.label }}</li>
                    {% endif %}
                {% endfor %}
            </ol>
        </nav>
    {% endif %}

    {% block body %}{% endblock %}
</main>

<footer class="container">© {{ "now"|date('Y') }} {{ site.name|default('Base CMS') }}</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    (() => {
        const overlay = document.getElementById('headerSearchOverlay');
        const toggleBtn = document.querySelector('[data-action="toggle-search"]');
        const closeBtn = overlay?.querySelector('[data-action="close-search"]');
        const input = overlay?.querySelector('input[name="q"]');

        const openOverlay = () => {
            if (!overlay) return;
            overlay.classList.add('show');
            overlay.removeAttribute('hidden');
            toggleBtn?.setAttribute('aria-expanded', 'true');
            input?.focus();
        };

        const closeOverlay = () => {
            if (!overlay) return;
            overlay.classList.remove('show');
            overlay.setAttribute('hidden', 'hidden');
            toggleBtn?.setAttribute('aria-expanded', 'false');
        };

        toggleBtn?.addEventListener('click', (event) => {
            event.preventDefault();
            if (overlay?.classList.contains('show')) {
                closeOverlay();
            } else {
                openOverlay();
            }
        });

        closeBtn?.addEventListener('click', (event) => {
            event.preventDefault();
            closeOverlay();
        });

        document.addEventListener('keyup', (event) => {
            if (event.key === 'Escape') {
                closeOverlay();
            }
        });
    })();
</script>
{% block scripts %}{% endblock %}
{% if hooks is defined and hooks.footer is defined %}
    {% for snippet in hooks.footer %}
        {{ snippet|raw }}
    {% endfor %}
{% endif %}
{% macro nav_item(item) %}
    {% set hasChildren = item.children is defined and item.children|length > 0 %}
    {% set target = item.open_in_new_tab ? '_blank' : '_self' %}
    {% set rel = item.open_in_new_tab ? 'noopener' : null %}
    {% set active = current_url is defined and current_url == item.url %}
    {% if hasChildren %}
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle{% if active %} active{% endif %}" href="{{ item.url ?? '#' }}" role="button" data-bs-toggle="dropdown" aria-expanded="false" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>{{ item.label }}</a>
            <ul class="dropdown-menu">
                {% for child in item.children %}
                    {{ _self.dropdown_item(child) }}
                {% endfor %}
            </ul>
        </li>
    {% else %}
        <li class="nav-item">
            <a class="nav-link{% if active %} active{% endif %}" href="{{ item.url }}" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>{{ item.label }}</a>
        </li>
    {% endif %}
{% endmacro %}

{% macro dropdown_item(item, level = 0) %}
    {% set hasChildren = item.children is defined and item.children|length > 0 %}
    {% set target = item.open_in_new_tab ? '_blank' : '_self' %}
    {% set rel = item.open_in_new_tab ? 'noopener' : null %}
    <li class="{% if hasChildren %}dropdown-submenu{% endif %}">
        <a class="dropdown-item d-flex align-items-center justify-content-between" href="{{ item.url }}" target="{{ target }}" {% if rel %}rel="{{ rel }}"{% endif %}>
            <span style="padding-left: {{ (level + 1) * 8 }}px;">{{ item.label }}</span>
            {% if hasChildren %}<i class="bi bi-chevron-right small"></i>{% endif %}
        </a>
        {% if hasChildren %}
            <ul class="dropdown-menu position-static border-0 shadow-none ps-2 show">
                {% for child in item.children %}
                    {{ _self.dropdown_item(child, level + 1) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}
</body>
</html>
