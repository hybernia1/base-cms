{% extends 'admin/layout.twig' %}

{% block title %}Integrace | Admin{% endblock %}

{% block body %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-1"><i class="bi bi-plug"></i> Integrace</h1>
        <p class="text-muted mb-0">Nastavení propojení s externími službami.</p>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
            <div>
                <h2 class="h5 mb-1">Google reCAPTCHA</h2>
                <p class="text-muted mb-0">Vyplň dvojici klíčů pro ochranu veřejných formulářů. Ponech prázdné pro vypnutí.</p>
            </div>
            <span class="badge bg-light text-dark">V3</span>
        </div>

        {% if errors.recaptcha %}
            <div class="alert alert-danger">{{ errors.recaptcha }}</div>
        {% endif %}

        <form method="post" action="/admin/extra/integrations" class="row g-3">
            <div class="col-md-6">
                <label for="recaptcha_site_key" class="form-label">Site key</label>
                <input type="text" id="recaptcha_site_key" name="recaptcha_site_key" class="form-control" value="{{ values.recaptcha_site_key }}" autocomplete="off">
                <div class="form-text">Veřejný klíč pro frontend (render=explicit). Pole nech prázdné pro vypnutí.</div>
            </div>
            <div class="col-md-6">
                <label for="recaptcha_secret_key" class="form-label">Secret key</label>
                <input type="text" id="recaptcha_secret_key" name="recaptcha_secret_key" class="form-control" value="{{ values.recaptcha_secret_key }}" autocomplete="off">
                <div class="form-text">Privátní klíč pro ověření tokenu na backendu.</div>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Uložit změny</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
