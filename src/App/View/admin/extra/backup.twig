{% extends 'admin/layout.twig' %}

{% block title %}Záloha databáze | Administrace{% endblock %}

{% block body %}
    <h1 class="h3 mb-4">Záloha databáze</h1>

    <div class="card shadow-sm">
        <div class="card-body p-4">
            <p class="mb-4 text-muted">Stáhni aktuální zálohu databáze pro případ potřeby obnovy.</p>
            <dl class="row">
                <dt class="col-sm-4 col-md-3 text-muted">Databáze</dt>
                <dd class="col-sm-8 col-md-9">{{ database_name }}</dd>
            </dl>

            <div class="d-flex align-items-center gap-3">
                <a class="btn btn-primary {% if not can_download %}disabled{% endif %}" href="/admin/extra/backup?download=1">
                    <i class="bi bi-cloud-download me-2"></i> Stáhnout zálohu
                </a>
                {% if not can_download %}
                    <span class="text-warning small">Zkontroluj prosím nastavení databáze a dostupnost nástroje mysqldump.</span>
                {% endif %}
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-4">
        <div class="card-body p-4 d-flex flex-wrap gap-3 justify-content-between align-items-start">
            <div>
                <h2 class="h5 mb-2">Debug mód</h2>
                <p class="text-muted mb-3">Přepni aplikaci mezi produkčním a vývojovým režimem. Změna přepíše soubor <code>config.php</code>.</p>
                <div class="d-inline-flex align-items-center gap-2">
                    <span class="badge {% if is_debug %}bg-warning text-dark{% else %}bg-success{% endif %}">Aktuálně: {{ is_debug ? 'dev' : 'prod' }}</span>
                    <span class="text-muted small">(režim prostředí)</span>
                </div>
            </div>
            <form method="post" action="/admin/extra/backup" class="d-flex align-items-center">
                <input type="hidden" name="toggle_debug" value="1">
                <button type="submit" class="btn {% if is_debug %}btn-outline-secondary{% else %}btn-outline-warning{% endif %}">
                    <i class="bi bi-bug me-2"></i>
                    {{ is_debug ? 'Vypnout debug' : 'Zapnout debug' }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}
