{# src/App/View/front/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}Můj web{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { background-color: #f8fafc; }
        header { background: #0d6efd; color: #fff; }
        header a { color: #fff; text-decoration: none; }
        .site-brand { font-weight: 700; letter-spacing: .5px; }
        main { padding: 2rem 0 3rem; }
        footer { padding: 2rem 0; color: #6c757d; }
        .content-body p { margin-bottom: 1rem; }
        .admin-bar { position: sticky; top: 0; z-index: 1030; background: #212529; color: #fff; padding: 0.5rem 0; }
        .admin-bar a { color: #fff; text-decoration: none; }
        .admin-bar .btn { padding: 0.25rem 0.65rem; }
        .admin-bar .btn .label { display: none; }
        @media (min-width: 768px) {
            .admin-bar .btn .label { display: inline; }
        }
        body.has-admin-bar header { margin-top: 0.5rem; }
    </style>
</head>
<body class="{% if admin_bar is defined and admin_bar %}has-admin-bar{% endif %}">
{% if admin_bar is defined and admin_bar %}
    <div class="admin-bar">
        <div class="container d-flex align-items-center gap-2 flex-wrap">
            {% if admin_bar.dashboard_url %}
                <a href="{{ admin_bar.dashboard_url }}" class="btn btn-sm btn-outline-light d-flex align-items-center gap-2">
                    <i class="bi bi-speedometer2"></i><span class="label">Administrace</span>
                </a>
                <a href="{{ admin_bar.dashboard_url }}" class="btn btn-sm btn-outline-light d-flex align-items-center gap-2">
                    <i class="bi bi-grid"></i><span class="label">Přehled</span>
                </a>
            {% endif %}

            {% if admin_bar.edit_url is defined %}
                <a href="{{ admin_bar.edit_url }}" class="btn btn-sm btn-outline-light d-flex align-items-center gap-2">
                    <i class="bi bi-pencil"></i><span class="label">Upravit</span>
                </a>
            {% endif %}

            {% if admin_bar.create_links|default([]) is not empty %}
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-plus-circle"></i><span class="label">Nový obsah</span>
                    </button>
                    <ul class="dropdown-menu">
                        {% for link in admin_bar.create_links %}
                            <li><a class="dropdown-item" href="{{ link.url }}">{{ link.label }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            <div class="ms-auto d-flex align-items-center gap-2 flex-wrap">
                {% if admin_bar.user_role_label %}
                    <span class="badge bg-light text-dark">{{ admin_bar.user_role_label }}</span>
                {% endif %}
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i><span class="label">{{ admin_bar.user_label }}</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% for link in admin_bar.user_links|default([]) %}
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2" href="{{ link.url }}">
                                    {% if link.icon %}<i class="bi {{ link.icon }}"></i>{% endif %}
                                    <span>{{ link.label }}</span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endif %}
<header>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand site-brand" href="/">Base CMS</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Přepnout navigaci">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0 align-items-lg-center">
                    <li class="nav-item"><a class="nav-link" href="/">Domů</a></li>
                    <li class="nav-item"><a class="nav-link" href="/{{ post_archive_slug }}">Archiv</a></li>
                    {% if current_user %}
                        <li class="nav-item"><a class="nav-link" href="/profile">Můj profil</a></li>
                        <li class="nav-item"><a class="nav-link" href="/logout"><i class="bi bi-box-arrow-right me-1"></i>Odhlásit se</a></li>
                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="/login"><i class="bi bi-box-arrow-in-right me-1"></i>Přihlášení</a></li>
                        <li class="nav-item"><a class="nav-link" href="/register"><i class="bi bi-person-plus me-1"></i>Registrace</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container">
    {% if flash_success %}
        {% for msg in flash_success %}
            <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
    {% endif %}
    {% if flash_error %}
        {% for msg in flash_error %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}
    {% endif %}

    {% block body %}{% endblock %}
</main>

<footer class="container">© {{ "now"|date('Y') }} Base CMS</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>
