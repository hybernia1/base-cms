{% extends 'admin/layout.twig' %}

{% set current_menu = current_type.slug %}
{% import 'admin/partials/components.twig' as ui %}

{% block title %}Obsah | Administrace{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">{{ current_type.plural_name|default('Obsah') }}</h1>
        <a href="/admin/content/{{ current_type.slug }}/create" class="btn btn-primary">Nov√Ω {{ current_type.name|lower }}</a>
    </div>

    <div class="ajax-block" data-ajax-container data-endpoint="/admin/content/{{ current_type.slug }}" data-current-url="{{ pagination.current_url }}">
        {% include 'admin/content/_list.twig' with {
            items: items,
            types: types,
            current_type: current_type,
            current_status: current_status,
            pagination: pagination
        } only %}
    </div>
{% endblock %}
