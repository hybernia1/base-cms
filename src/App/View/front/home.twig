{% extends 'front/layout.twig' %}

{% block title %}Úvod | Můj web{% endblock %}

{% block body %}
    <h1>Aktuální příspěvky</h1>

    {% if posts is empty %}
        <p>Žádné příspěvky zatím nejsou publikovány.</p>
    {% else %}
        <div class="list-group">
            {% for post in posts %}
                <article class="list-group-item list-group-item-action mb-2">
                    <h2 class="h5 mb-1">{{ post.title }}</h2>
                    <div class="text-muted small">{{ post.created_at|date('j. n. Y H:i') }} · Typ: {{ post.type }}</div>
                    {% if post.body %}
                        <p class="mb-0 mt-2">{{ post.body|slice(0, 200) }}{% if post.body|length > 200 %}…{% endif %}</p>
                    {% endif %}
                </article>
            {% endfor %}
        </div>
    {% endif %}
{% endblock %}
