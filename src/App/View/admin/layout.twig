<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    const adminDialog = (() => {
        const modalEl = document.getElementById('adminDialog');
        const modalSupported = typeof bootstrap !== 'undefined' && !!bootstrap?.Modal;
        const modal = modalSupported && modalEl ? new bootstrap.Modal(modalEl) : null;
        const titleEl = modalEl?.querySelector('[data-role="dialog-title"]');
        const messageEl = modalEl?.querySelector('[data-role="dialog-message"]');
        const confirmBtn = modalEl?.querySelector('[data-role="dialog-confirm"]');
        const cancelBtn = modalEl?.querySelector('[data-role="dialog-cancel"]');
        let resolver = null;

        const closeAndResolve = (value) => {
            if (modal) {
                modal.hide();
            }
            if (resolver) {
                resolver(value);
                resolver = null;
            }
        };

        const open = ({
            title = 'Potvrzení',
            message = '',
            confirmText = 'OK',
            cancelText = '',
            variant = 'primary',
        }) => {
            if (!modalSupported || !modalEl || !modal) {
                return Promise.resolve(window.confirm(message || ''));
            }

            if (titleEl) titleEl.textContent = title;
            if (messageEl) messageEl.textContent = message;

            if (confirmBtn) {
                confirmBtn.textContent = confirmText;
                confirmBtn.className = 'btn btn-' + variant;
            }

            if (cancelBtn) {
                if (cancelText) {
                    cancelBtn.textContent = cancelText;
                    cancelBtn.classList.remove('d-none');
                } else {
                    cancelBtn.classList.add('d-none');
                }
            }

            return new Promise((resolve) => {
                resolver = resolve;
                modal.show();
            });
        };

        if (modalSupported && confirmBtn) {
            confirmBtn.addEventListener('click', () => closeAndResolve(true));
        }

        if (modalSupported && cancelBtn) {
            cancelBtn.addEventListener('click', () => closeAndResolve(false));
        }

        if (modalSupported && modalEl) {
            modalEl.addEventListener('hidden.bs.modal', () => closeAndResolve(false));
        }

        return {
            confirm(message, options = {}) {
                return open({
                    message,
                    title: options.title || 'Potvrzení',
                    confirmText: options.confirmText || 'Ano',
                    cancelText: options.cancelText || 'Ne',
                    variant: options.variant || 'primary',
                });
            },
            alert(message, options = {}) {
                return open({
                    message,
                    title: options.title || 'Upozornění',
                    confirmText: options.confirmText || 'OK',
                    cancelText: '',
                    variant: options.variant || 'primary',
                });
            },
        };
    })();

    document.addEventListener('DOMContentLoaded', () => {
        document.querySelectorAll('.menu-toggle').forEach((toggle) => {
            const targetSelector = toggle.getAttribute('data-bs-target');
            const target = targetSelector ? document.querySelector(targetSelector) : null;
            const icon = toggle.querySelector('.menu-chevron');

            if (!target) {
                return;
            }

            const collapse = new bootstrap.Collapse(target, {toggle: false});

            const updateIcon = () => {
                if (!icon) return;
                icon.classList.toggle('rotate', target.classList.contains('show'));
            };

            target.addEventListener('shown.bs.collapse', updateIcon);
            target.addEventListener('hidden.bs.collapse', updateIcon);
            toggle.addEventListener('click', (event) => {
                event.preventDefault();
                collapse.toggle();
            });

            updateIcon();
        });

        const buildConfirmOptions = (element) => ({
            title: element.dataset.confirmTitle || 'Potvrzení',
            confirmText: element.dataset.confirmConfirm || 'Ano',
            cancelText: element.dataset.confirmCancel || 'Ne',
            variant: element.dataset.confirmVariant || 'danger',
        });

        document.querySelectorAll('[data-confirm]').forEach((element) => {
            if (element.dataset.confirmAttached === '1') {
                return;
            }

            const message = element.getAttribute('data-confirm') || 'Opravdu pokračovat?';
            const options = buildConfirmOptions(element);

            if (element.tagName === 'FORM') {
                element.addEventListener('submit', async (event) => {
                    if (element.dataset.confirmHandled === '1') {
                        return;
                    }

                    event.preventDefault();
                    const confirmed = await adminDialog.confirm(message, options);
                    if (confirmed) {
                        element.dataset.confirmHandled = '1';
                        element.submit();
                    }
                });
            } else {
                element.addEventListener('click', async (event) => {
                    if (element.dataset.confirmHandled === '1') {
                        return;
                    }

                    event.preventDefault();
                    const confirmed = await adminDialog.confirm(message, options);
                    if (confirmed) {
                        element.dataset.confirmHandled = '1';
                        if (element.tagName === 'A' && element.getAttribute('href')) {
                            window.location.href = element.getAttribute('href');
                        } else if (element.tagName === 'BUTTON' && element.type === 'submit' && element.form) {
                            element.form.submit();
                        }
                    }
                });
            }

            element.dataset.confirmAttached = '1';
        });
    });
</script>
<div class="modal fade" id="adminDialog" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" data-role="dialog-title">Potvrzení</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0" data-role="dialog-message"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-role="dialog-cancel" data-bs-dismiss="modal">Zrušit</button>
                <button type="button" class="btn btn-primary" data-role="dialog-confirm">OK</button>
            </div>
        </div>
    </div>
</div>
{% block scripts %}{% endblock %}
</body>
