{# src/App/View/front/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Můj web{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        body { background-color: #f8fafc; }
        header { background: #0d6efd; color: #fff; }
        header a { color: #fff; text-decoration: none; }
        .site-brand { font-weight: 700; letter-spacing: .5px; }
        main { padding: 2rem 0 3rem; }
        footer { padding: 2rem 0; color: #6c757d; }
        .content-body p { margin-bottom: 1rem; }
        .admin-bar { position: sticky; top: 0; z-index: 1030; background: #212529; color: #fff; padding: 0.5rem 0; }
        .admin-bar a { color: #fff; text-decoration: none; }
        .admin-bar .btn { padding: 0.25rem 0.5rem; }
        body.has-admin-bar header { margin-top: 0.5rem; }
    </style>
</head>
<body class="{% if admin_bar is defined and admin_bar %}has-admin-bar{% endif %}">
{% if admin_bar is defined and admin_bar %}
    <div class="admin-bar">
        <div class="container d-flex align-items-center gap-3 flex-wrap">
            {% if admin_bar.dashboard_url %}
                <a href="{{ admin_bar.dashboard_url }}" class="fw-semibold text-decoration-none d-flex align-items-center gap-1">
                    <i class="bi bi-speedometer2"></i>
                    <span>Administrace</span>
                </a>
            {% endif %}

            {% if admin_bar.edit_url is defined %}
                <a href="{{ admin_bar.edit_url }}" class="text-decoration-none d-flex align-items-center gap-1">
                    <i class="bi bi-pencil"></i>
                    <span>Upravit tento obsah</span>
                </a>
            {% endif %}

            {% if admin_bar.create_links|default([]) is not empty %}
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Nový obsah
                    </button>
                    <ul class="dropdown-menu">
                        {% for link in admin_bar.create_links %}
                            <li><a class="dropdown-item" href="{{ link.url }}">{{ link.label }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}

            {% if admin_bar.dashboard_url %}
                <a href="{{ admin_bar.dashboard_url }}" class="text-decoration-none d-flex align-items-center gap-1">
                    <i class="bi bi-grid"></i>
                    <span>Přehled</span>
                </a>
            {% endif %}

            <div class="ms-auto d-flex align-items-center gap-2 flex-wrap">
                {% if admin_bar.user_role_label %}
                    <span class="badge bg-light text-dark">{{ admin_bar.user_role_label }}</span>
                {% endif %}
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-light dropdown-toggle d-flex align-items-center gap-2" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i>
                        <span>{{ admin_bar.user_label }}</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        {% for link in admin_bar.user_links|default([]) %}
                            <li>
                                <a class="dropdown-item d-flex align-items-center gap-2" href="{{ link.url }}">
                                    {% if link.icon %}<i class="bi {{ link.icon }}"></i>{% endif %}
                                    <span>{{ link.label }}</span>
                                </a>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endif %}
<header>
    <div class="container py-3 d-flex justify-content-between align-items-center">
        <a href="/" class="site-brand h4 mb-0">Base CMS</a>
        <nav class="d-flex gap-3">
            <a href="/">Domů</a>
            <a href="/{{ post_archive_slug }}">Archiv</a>
            {% if current_user %}
                <a href="/logout">Odhlásit se</a>
            {% else %}
                <a href="/login">Přihlášení</a>
                <a href="/register">Registrace</a>
            {% endif %}
        </nav>
    </div>
</header>

<main class="container">
    {% if flash_success %}
        {% for msg in flash_success %}
            <div class="alert alert-success">{{ msg }}</div>
        {% endfor %}
    {% endif %}
    {% if flash_error %}
        {% for msg in flash_error %}
            <div class="alert alert-danger">{{ msg }}</div>
        {% endfor %}
    {% endif %}

    {% block body %}{% endblock %}
</main>

<footer class="container">© {{ "now"|date('Y') }} Base CMS</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
{% block scripts %}{% endblock %}
</body>
</html>
