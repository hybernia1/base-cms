<div class="card shadow-sm">
    <div class="card-header d-flex align-items-center justify-content-between">
        <span class="fw-semibold">Komentáře</span>
        <span class="badge text-bg-light">{{ items|length }}</span>
    </div>
    <div class="list-group list-group-flush">
        {% if items is empty %}
            <div class="list-group-item text-muted">Žádné výsledky.</div>
        {% else %}
            {% for item in items %}
                <a href="/admin/comments/{{ item.id }}/edit" class="list-group-item list-group-item-action">
                    <div class="d-flex justify-content-between align-items-start">
                        <div class="me-3">
                            <div class="fw-semibold">{{ item.author_name }}</div>
                            <div class="small text-muted">{{ item.author_email ?: 'Bez e-mailu' }}</div>
                            <div class="small text-body mt-2">{{ item.body|slice(0, 120) }}{% if item.body|length > 120 %}…{% endif %}</div>
                        </div>
                        <span class="badge {{ item.status == 'approved' ? 'text-bg-success' : 'text-bg-secondary' }}">
                            {{ item.status|capitalize }}
                        </span>
                    </div>
                </a>
            {% endfor %}
        {% endif %}
    </div>
</div>
