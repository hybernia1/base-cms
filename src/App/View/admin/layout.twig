{# src/App/View/admin/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Administrace{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">

    {# Bootstrap 5 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css">
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify"></script>

    <style>
        /* Layout adminu */
        :root {
            font-size: 15px;
            --admin-bar-height: 60px;
        }

        body {
            min-height: 100vh;
            background: #f8fafc;
        }

        .admin-wrapper {
            display: flex;
            min-height: calc(100vh - var(--admin-bar-height));
        }

        .admin-sidebar {
            width: 240px;
            flex-shrink: 0;
        }

        .admin-content {
            flex: 1;
            padding: 1.25rem;
        }

        .card-body {
            padding: 1.1rem;
        }

        .card-header {
            padding: 0.85rem 1.1rem;
        }

        /* Admin bar (shared look with frontend) */
        .admin-bar {
            position: sticky;
            top: 0;
            z-index: 1040;
            background: #0f172a;
            color: #e2e8f0;
            padding: 0.55rem 0;
            box-shadow: 0 4px 16px rgba(15, 23, 42, 0.25);
        }

        .admin-bar a,
        .admin-bar .btn,
        .admin-bar button {
            color: inherit;
            text-decoration: none;
        }

        .admin-bar .admin-pill {
            display: inline-flex;
            align-items: center;
            gap: 0.45rem;
            padding: 0.35rem 0.85rem;
            border-radius: 999px;
            background: transparent;
            border: none;
            color: inherit;
            font-weight: 600;
            transition: background-color 0.15s ease, color 0.15s ease;
        }

        .admin-bar .admin-pill:hover,
        .admin-bar .admin-pill:focus {
            background: rgba(255, 255, 255, 0.08);
            color: #fff;
        }

        .admin-bar .admin-pill .label { display: none; }
        @media (min-width: 768px) {
            .admin-bar .admin-pill .label { display: inline; }
        }

        .admin-bar .dropdown-menu {
            border: none;
            box-shadow: 0 12px 28px rgba(15, 23, 42, 0.18);
        }

        .admin-bar .user-badge {
            background: rgba(255, 255, 255, 0.14);
            color: #fff;
        }

        /* Malé displeje: sidebar je offcanvas */
        @media (max-width: 991.98px) {
            .admin-sidebar {
                display: none;
            }

            .admin-content {
                padding: 1rem;
            }
        }

        /* Optional: aktivní link */
        .nav-link.active {
            font-weight: 600;
        }

        .menu-toggle {
            cursor: pointer;
        }

        .menu-chevron {
            transition: transform 0.2s ease;
        }

        .menu-chevron.rotate {
            transform: rotate(90deg);
        }

        .badge-webp {
            font-size: 0.75rem;
        }
    </style>

    {% block styles %}{% endblock %}
</head>
<body data-flash-success='{{ flash_success|json_encode|e('html_attr') }}'
      data-flash-error='{{ flash_error|json_encode|e('html_attr') }}'>

<div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>
<div class="toast align-items-center text-bg-primary border-0 d-none" id="toastTemplate" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body w-100">
            <div class="fw-semibold small text-white-50 text-uppercase" data-role="toast-title"></div>
            <div data-role="toast-message"></div>
            <div class="mt-2 pt-2 border-top border-light-subtle d-none d-flex gap-2 flex-wrap" data-role="toast-actions"></div>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

{# TOP ADMIN BAR #}
<div class="admin-bar">
    <div class="container-fluid d-flex align-items-center gap-2 flex-wrap">
        <button class="admin-pill d-lg-none" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#adminSidebarOffcanvas"
                aria-controls="adminSidebarOffcanvas">
            <i class="bi bi-list"></i><span class="label">Menu</span>
        </button>

        <a class="admin-pill" href="/admin">
            <i class="bi bi-speedometer2"></i><span class="label">Administrace</span>
        </a>

        <a href="/" class="admin-pill" target="_blank" rel="noopener">
            <i class="bi bi-box-arrow-up-right"></i><span class="label">Otevřít web</span>
        </a>

        <div class="ms-auto d-flex align-items-center gap-2 flex-wrap">
            {% if app_user is defined and app_user %}
                {% if app_user.role %}
                    <span class="badge user-badge">{{ app_user.role }}</span>
                {% endif %}
                <div class="dropdown">
                    <button class="admin-pill dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-person-circle"></i><span class="label">{{ app_user.email }}</span>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item d-flex align-items-center gap-2" href="/" target="_blank" rel="noopener">
                                <i class="bi bi-box-arrow-up-right"></i> <span>Otevřít web</span>
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item d-flex align-items-center gap-2" href="/admin/logout">
                                <i class="bi bi-box-arrow-right"></i> <span>Odhlásit</span>
                            </a>
                        </li>
                    </ul>
                </div>
            {% endif %}
        </div>
    </div>
</div>

<div class="admin-wrapper">

    {# SIDEBAR na desktopu #}
    <aside class="admin-sidebar bg-light border-end d-none d-lg-block">
        <div class="p-3">
            <div class="fw-bold mb-3 text-uppercase small text-muted">
                Navigace
            </div>
            {% set settings_sections = settings_sections|default({
                'main': {'label': 'Základní', 'icon': 'bi-gear', 'url': '/admin/settings/main'},
                'uploads': {'label': 'Uploady', 'icon': 'bi-upload', 'url': '/admin/settings/uploads'},
                'email': {'label': 'E-maily', 'icon': 'bi-envelope', 'url': '/admin/settings/email'},
                'comments': {'label': 'Komentáře', 'icon': 'bi-chat-dots', 'url': '/admin/settings/comments'},
                'content-types': {'label': 'Typy obsahu', 'icon': 'bi-journal-text', 'url': '/admin/settings/content-types'},
                'term-types': {'label': 'Typy termů', 'icon': 'bi-tags', 'url': '/admin/settings/term-types'}
            }) %}
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'dashboard' %}active{% endif %}"
                       href="/admin">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                {% if content_type_menu is defined %}
                    {% for type in content_type_menu %}
                        {% set isActive = current_menu is defined and current_menu == type.slug %}
                        {% set isCreate = form_action is defined and ('/create' in form_action) and isActive %}
                        {% set createPrefix = type.key is defined and type.key == 'page' ? 'Nová' : 'Nový' %}
                        {% set menuId = 'content-menu-' ~ type.slug ~ '-desktop' %}
                        <li class="nav-item mb-1">
                            <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle {% if isActive %}active{% endif %}"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#{{ menuId }}"
                                    aria-controls="{{ menuId }}"
                                    aria-expanded="{{ isActive ? 'true' : 'false' }}">
                                <i class="bi bi-journal-text me-2"></i> {{ type.menu_label }}
                                <i class="bi bi-chevron-right ms-auto menu-chevron {% if isActive %}rotate{% endif %}"></i>
                            </button>
                            <div class="collapse {% if isActive %}show{% endif %}" id="{{ menuId }}">
                                <ul class="nav flex-column ms-3 mt-1 small">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if isActive and not isCreate %}active{% endif %}" href="/admin/content/{{ type.slug }}">
                                            <i class="bi bi-list-ul me-2"></i> Přehled
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if isCreate %}active{% endif %}" href="/admin/content/{{ type.slug }}/create">
                                            <i class="bi bi-plus-circle me-2"></i> {{ createPrefix }} {{ type.name|lower }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    {% endfor %}
                {% endif %}

                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'media' %}active{% endif %}"
                       href="/admin/media">
                        <i class="bi bi-image me-2"></i> Média
                    </a>
                </li>

                <li class="nav-item mb-1">
                    {% set termsActive = current_menu is defined and current_menu starts with 'terms' %}
                    {% set termsMenuId = 'terms-menu-desktop' %}
                    <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle {% if termsActive %}active{% endif %}"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#{{ termsMenuId }}"
                            aria-controls="{{ termsMenuId }}"
                            aria-expanded="{{ termsActive ? 'true' : 'false' }}">
                        <i class="bi bi-tags me-2"></i> Termy
                        <i class="bi bi-chevron-right ms-auto menu-chevron {% if termsActive %}rotate{% endif %}"></i>
                    </button>
                    <div class="collapse {% if termsActive %}show{% endif %}" id="{{ termsMenuId }}">
                        <ul class="nav flex-column ms-3 mt-1 small">
                            {% if term_type_menu is defined %}
                                {% for termKey, termDef in term_type_menu %}
                                    {% set termIsActive = current_menu is defined and current_menu == 'terms:' ~ termKey %}
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if termIsActive %}active{% endif %}" href="/admin/terms/type/{{ termKey }}">
                                            <i class="bi bi-collection me-2"></i> {{ termDef.label|default(termKey) }}
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <span class="nav-link text-muted">Žádné typy termů.</span>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                </li>

                {% if app_user is defined and app_user and app_user.role == 'admin' %}
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'users' %}active{% endif %}"
                           href="/admin/users">
                            <i class="bi bi-people me-2"></i> Uživatelé
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'email_templates' %}active{% endif %}"
                           href="/admin/email-templates">
                            <i class="bi bi-envelope-paper me-2"></i> E-mailové šablony
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'comments' %}active{% endif %}"
                           href="/admin/comments">
                            <i class="bi bi-chat-dots me-2"></i> Komentáře
                        </a>
                    </li>
                    {% set settingsActive = current_menu is defined and current_menu starts with 'settings' %}
                    {% set settingsMenuId = 'settings-menu-desktop' %}
                    <li class="nav-item mb-1">
                        <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle {% if settingsActive %}active{% endif %}"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#{{ settingsMenuId }}"
                                aria-controls="{{ settingsMenuId }}"
                                aria-expanded="{{ settingsActive ? 'true' : 'false' }}">
                            <i class="bi bi-gear me-2"></i> Nastavení
                            <i class="bi bi-chevron-right ms-auto menu-chevron {% if settingsActive %}rotate{% endif %}"></i>
                        </button>
                        <div class="collapse {% if settingsActive %}show{% endif %}" id="{{ settingsMenuId }}">
                            <ul class="nav flex-column ms-3 mt-1 small">
                                {% for key, section in settings_sections %}
                                    {% set itemActive = current_menu is defined and current_menu == 'settings:' ~ key %}
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if itemActive %}active{% endif %}" href="{{ section.url|default('/admin/settings/' ~ key) }}">
                                            <i class="bi {{ section.icon|default('bi-gear') }} me-2"></i> {{ section.label|default(key) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </li>
                {% endif %}
                {# další odkazy... #}
            </ul>
        </div>
    </aside>

    {# SIDEBAR jako offcanvas na mobilech #}
    <div class="offcanvas offcanvas-start" tabindex="-1" id="adminSidebarOffcanvas">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title">Menu</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas"
                    aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'dashboard' %}active{% endif %}"
                       href="/admin">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>
                {% if content_type_menu is defined %}
                    {% for type in content_type_menu %}
                        {% set isActive = current_menu is defined and current_menu == type.slug %}
                        {% set isCreate = form_action is defined and ('/create' in form_action) and isActive %}
                        {% set createPrefix = type.key is defined and type.key == 'page' ? 'Nová' : 'Nový' %}
                        {% set menuId = 'content-menu-' ~ type.slug ~ '-mobile' %}
                        <li class="nav-item mb-1">
                            <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle {% if isActive %}active{% endif %}"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#{{ menuId }}"
                                    aria-controls="{{ menuId }}"
                                    aria-expanded="{{ isActive ? 'true' : 'false' }}">
                                <i class="bi bi-journal-text me-2"></i> {{ type.menu_label }}
                                <i class="bi bi-chevron-right ms-auto menu-chevron {% if isActive %}rotate{% endif %}"></i>
                            </button>
                            <div class="collapse {% if isActive %}show{% endif %}" id="{{ menuId }}">
                                <ul class="nav flex-column ms-3 mt-1 small">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if isActive and not isCreate %}active{% endif %}" href="/admin/content/{{ type.slug }}">
                                            <i class="bi bi-list-ul me-2"></i> Přehled
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if isCreate %}active{% endif %}" href="/admin/content/{{ type.slug }}/create">
                                            <i class="bi bi-plus-circle me-2"></i> {{ createPrefix }} {{ type.name|lower }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    {% endfor %}
                {% endif %}
                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'media' %}active{% endif %}"
                       href="/admin/media">
                        <i class="bi bi-image me-2"></i> Média
                    </a>
                </li>
                <li class="nav-item mb-1">
                    {% set termsActive = current_menu is defined and current_menu starts with 'terms' %}
                    {% set termsMenuId = 'terms-menu-mobile' %}
                    <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle {% if termsActive %}active{% endif %}"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#{{ termsMenuId }}"
                            aria-controls="{{ termsMenuId }}"
                            aria-expanded="{{ termsActive ? 'true' : 'false' }}">
                        <i class="bi bi-tags me-2"></i> Termy
                        <i class="bi bi-chevron-right ms-auto menu-chevron {% if termsActive %}rotate{% endif %}"></i>
                    </button>
                    <div class="collapse {% if termsActive %}show{% endif %}" id="{{ termsMenuId }}">
                        <ul class="nav flex-column ms-3 mt-1 small">
                            {% if term_type_menu is defined %}
                                {% for termKey, termDef in term_type_menu %}
                                    {% set termIsActive = current_menu is defined and current_menu == 'terms:' ~ termKey %}
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if termIsActive %}active{% endif %}" href="/admin/terms/type/{{ termKey }}">
                                            <i class="bi bi-collection me-2"></i> {{ termDef.label|default(termKey) }}
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <span class="nav-link text-muted">Žádné typy termů.</span>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                </li>
                {% if app_user is defined and app_user and app_user.role == 'admin' %}
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'users' %}active{% endif %}"
                           href="/admin/users">
                            <i class="bi bi-people me-2"></i> Uživatelé
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'email_templates' %}active{% endif %}"
                           href="/admin/email-templates">
                            <i class="bi bi-envelope-paper me-2"></i> E-mailové šablony
                        </a>
                    </li>
                    {% set settingsActive = current_menu is defined and current_menu starts with 'settings' %}
                    {% set settingsMenuId = 'settings-menu-mobile' %}
                    <li class="nav-item mb-1">
                        <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle {% if settingsActive %}active{% endif %}"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#{{ settingsMenuId }}"
                                aria-controls="{{ settingsMenuId }}"
                                aria-expanded="{{ settingsActive ? 'true' : 'false' }}">
                            <i class="bi bi-gear me-2"></i> Nastavení
                            <i class="bi bi-chevron-right ms-auto menu-chevron {% if settingsActive %}rotate{% endif %}"></i>
                        </button>
                        <div class="collapse {% if settingsActive %}show{% endif %}" id="{{ settingsMenuId }}">
                            <ul class="nav flex-column ms-3 mt-1 small">
                                {% for key, section in settings_sections %}
                                    {% set itemActive = current_menu is defined and current_menu == 'settings:' ~ key %}
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if itemActive %}active{% endif %}" href="{{ section.url|default('/admin/settings/' ~ key) }}">
                                            <i class="bi {{ section.icon|default('bi-gear') }} me-2"></i> {{ section.label|default(key) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>

    {# HLAVNÍ OBSAH #}
    <main class="admin-content">
        {% block body %}{% endblock %}
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script src="/assets/js/admin.js"></script>

{% block scripts %}{% endblock %}
</body>
</html>
