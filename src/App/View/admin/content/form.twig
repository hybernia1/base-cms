{% extends 'admin/layout.twig' %}
{% import 'admin/partials/components.twig' as components %}

{% set current_menu = current_type.slug %}

{% block title %}{{ heading }} | Administrace{% endblock %}

{% block styles %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset_urls.summernote_css }}">
{% endblock %}

{% block body %}
    <h1 class="h3 mb-4">{{ heading }}</h1>

    <form method="post" action="{{ form_action }}" class="mb-4" enctype="multipart/form-data" id="contentForm">
        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card shadow-sm h-100">
                    <div class="card-body p-4">
                        <div class="mb-3">
                            <label for="title" class="form-label">Název</label>
                            <input type="text" name="title" id="title" class="form-control {% if errors.title %}is-invalid{% endif %}" value="{{ values.title }}">
                            {% if errors.title %}
                                <div class="invalid-feedback">{{ errors.title }}</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <label for="slug" class="form-label">Slug</label>
                            <input type="text" name="slug" id="slug" class="form-control {% if errors.slug %}is-invalid{% endif %}" value="{{ values.slug }}" placeholder="např. muj-prispevek">
                            {% if errors.slug %}
                                <div class="invalid-feedback">{{ errors.slug }}</div>
                            {% else %}
                                <div class="form-text">Pokud necháš prázdné, vytvoří se automaticky z názvu.</div>
                            {% endif %}
                        </div>

                        <div class="mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <label for="body" class="form-label mb-0">Text</label>
                                <div class="d-flex gap-2">
                                    <button
                                        type="button"
                                        class="btn btn-outline-secondary btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#mediaLibraryModal"
                                        data-media-action="body"
                                    >
                                        <i class="bi bi-image"></i> Vložit obrázek z knihovny
                                    </button>
                                </div>
                            </div>
                            <textarea name="body" id="body" rows="8" class="form-control">{{ values.body }}</textarea>
                            <div id="bodyMediaInputs" class="d-none">
                                {% for mediaId in values.media_ids %}
                                    <input type="hidden" name="media_ids[]" value="{{ mediaId }}" data-media-id="{{ mediaId }}">
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                {% set current_status = values.status ?: 'draft' %}
                <div class="card shadow-sm mb-3">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span class="fw-semibold">Publikace</span>
                        {% if current_status == 'published' %}
                            <span class="badge text-bg-success">Publikovaný</span>
                        {% else %}
                            <span class="badge text-bg-secondary">Koncept</span>
                        {% endif %}
                    </div>
                    <div class="card-body">

                        <input
                            type="hidden"
                            name="status"
                            id="statusField"
                            value="{{ current_status }}"
                        >

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-outline-secondary w-100 status-submit" data-status-action="draft">Uložit jako koncept</button>
                            <button type="submit" class="btn btn-success w-100 status-submit" data-status-action="published">Publikovat</button>
                        </div>

                        {% if errors.status %}
                            <div class="invalid-feedback d-block mt-2">{{ errors.status }}</div>
                        {% endif %}
                        <div class="text-muted small mt-2">
                            Drafty se na webu nezobrazí, dokud je nepřepneš na publikované.
                        </div>

                        <div class="form-check form-switch mt-3">
                            <input class="form-check-input" type="checkbox" role="switch" id="allow_comments" name="allow_comments" value="1" {% if values.allow_comments is not defined or values.allow_comments != '0' %}checked{% endif %}>
                            <label class="form-check-label" for="allow_comments">Povolit komentáře u tohoto příspěvku</label>
                        </div>

                        {% if (view_url is defined and view_url) or content_id is defined %}
                            <hr class="my-3">
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted small">Akce</span>
                                <div class="btn-group btn-group-sm" role="group">
                                    {% if view_url is defined and view_url %}
                                        {{ components.view_button(view_url, {
                                            disabled: values.status != 'published',
                                            target: '_blank',
                                            label: 'Zobrazit na webu',
                                            icon: 'bi-eye',
                                            variant: 'secondary',
                                            class: 'btn-sm'
                                        }) }}
                                    {% endif %}

                                    {% if content_id is defined %}
                                        <button
                                            type="button"
                                            class="btn btn-outline-danger btn-icon btn-sm"
                                            id="deleteContentTrigger"
                                            data-confirm-message="Opravdu smazat tento obsah?"
                                            aria-label="Smazat"
                                        >
                                            <i class="bi bi-trash"></i>
                                        </button>
                                    {% endif %}
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header fw-semibold">Náhledový obrázek</div>
                    <div class="card-body">
                        <input type="hidden" name="thumbnail_id" id="thumbnail_id" value="{{ values.thumbnail_id }}">

                        <div class="mb-2 d-flex flex-wrap gap-2">
                            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="modal" data-bs-target="#mediaLibraryModal" data-media-action="thumbnail">
                                Otevřít knihovnu médií
                            </button>
                            <button class="btn btn-outline-danger {% if not values.thumbnail_id %}d-none{% endif %}" type="button" id="removeThumbnailBtn">Odebrat náhled</button>
                        </div>

                        <div id="thumbnailPreview" class="border rounded p-2 bg-light" style="max-width: 320px;{% if not values.thumbnail_id %} display:none;{% endif %}">
                            {% if values.thumbnail_id %}
                                {% for mediaItem in media %}
                                    {% if mediaItem.id == values.thumbnail_id %}
                                        <img src="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" class="img-fluid" alt="{{ mediaItem.alt }}">
                                        <div class="small mt-1 text-muted">{{ mediaItem.original_name ?: mediaItem.filename }}</div>
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                        </div>
                        <div class="form-text">Vyber existující obrázek z knihovny nebo nahraj nový.</div>
                        {% if errors.thumbnail %}
                            <div class="text-danger small">{{ errors.thumbnail }}</div>
                        {% endif %}
                    </div>
                </div>

                <div class="card shadow-sm mb-3">
                    <div class="card-header fw-semibold">Termy a štítky</div>
                    <div class="card-body">
                        {% if allowed_term_types is not empty %}
                            {% if errors.terms %}
                                <div class="alert alert-danger py-2">{{ errors.terms }}</div>
                            {% endif %}
                            <div class="row g-3">
                                {% for typeKey, typeDef in allowed_term_types %}
                                    <div class="col-12">
                                        <div class="border rounded p-3 h-100">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="bi bi-tags me-2 text-muted"></i>
                                                <span class="fw-semibold">{{ typeDef.label|default(typeKey) }}</span>
                                            </div>
                                            <input id="termPicker_{{ typeKey }}" class="form-control term-picker" placeholder="Začni psát a vyber term" autocomplete="off" data-term-type="{{ typeKey }}">
                                            <div class="form-text mt-2">Nové termy se uloží jako {{ typeDef.label|default(typeKey) }}.</div>
                                            <div class="text-danger small mt-2 d-none" id="termPickerErrors_{{ typeKey }}"></div>
                                            <div id="termHiddenContainer_{{ typeKey }}"></div>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-muted">Pro tento typ obsahu nejsou povolené žádné termy.</div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-between align-items-center mt-3">
            <a href="/admin/content/{{ current_type.slug }}" class="btn btn-outline-secondary">Zpět</a>
            {# tlačítka pro uložení jsou v boxu Publikace #}
        </div>
    </form>

    {% if content_id is defined %}
        <form
            id="deleteContentForm"
            action="/admin/content/{{ current_type.slug }}/{{ content_id }}/delete"
            method="post"
            class="d-none"
        ></form>
    {% endif %}

    <div class="modal fade" id="mediaLibraryModal" tabindex="-1" aria-labelledby="mediaLibraryLabel" aria-hidden="true">
        <div class="modal-dialog modal-xl modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="mediaLibraryLabel">Knihovna médií</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Zavřít"></button>
                </div>
                <div class="modal-body">
                    <form id="mediaUploadForm" class="row g-2 align-items-end mb-3" enctype="multipart/form-data">
                        <div class="col-md-5">
                            <label class="form-label" for="libraryFile">Soubor</label>
                            <input type="file" id="libraryFile" name="file" class="form-control" required>
                        </div>
                        <div class="col-md-5">
                            <label class="form-label" for="libraryAlt">Alt text / popisek</label>
                            <input type="text" id="libraryAlt" name="alt" class="form-control" placeholder="Volitelný popis">
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary w-100" type="submit">Nahrát</button>
                        </div>
                        <div class="col-12">
                            <div class="small text-muted">Nahrané soubory se okamžitě přidají do knihovny bez obnovení stránky.</div>
                        </div>
                    </form>

                    <div class="row row-cols-2 row-cols-md-4 row-cols-xl-6 g-3" id="mediaLibraryGrid">
                        {% for mediaItem in media %}
                            {% if mediaItem.is_image %}
                                <div class="col">
                                    <div class="card h-100 media-card" role="button" tabindex="0" data-media-id="{{ mediaItem.id }}" data-media-url="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" data-media-label="{{ mediaItem.original_name ?: mediaItem.filename }}">
                                        <img src="/{{ mediaItem.path }}/{{ mediaItem.webp_filename ?: mediaItem.filename }}" class="card-img-top" alt="{{ mediaItem.alt }}">
                                        <div class="card-body p-2">
                                            <div class="small text-truncate" title="{{ mediaItem.original_name ?: mediaItem.filename }}">{{ mediaItem.original_name ?: mediaItem.filename }}</div>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="alert alert-info mt-3" id="mediaLibraryEmpty" {% if media is not empty %}style="display:none;"{% endif %}>Zatím žádné obrázky.</div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zavřít</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    <script src="{{ asset_urls.jquery_js }}"></script>
    <script src="{{ asset_urls.summernote_js }}"></script>
    <script>
        const termOptions = [
            {% for typeKey, typeDef in allowed_term_types %}
                {% for term in terms[typeKey]|default([]) %}
                    {
                        value: "{{ term.id }}",
                        name: "{{ term.name|e('js') }}",
                        type: "{{ term.type }}",
                        type_label: "{{ typeDef.label|default(typeKey)|e('js') }}",
                    },
                {% endfor %}
            {% endfor %}
        ];
        const selectedTermIds = {{ selected_terms|json_encode|raw }};

        const thumbnailInput = document.getElementById('thumbnail_id');
        const thumbnailPreview = document.getElementById('thumbnailPreview');
        const mediaGrid = document.getElementById('mediaLibraryGrid');
        const mediaModalEl = document.getElementById('mediaLibraryModal');
        const mediaEmptyAlert = document.getElementById('mediaLibraryEmpty');
        const removeThumbnailBtn = document.getElementById('removeThumbnailBtn');
        const deleteContentTrigger = document.getElementById('deleteContentTrigger');
        const deleteContentForm = document.getElementById('deleteContentForm');
        const bodyMediaInputs = document.getElementById('bodyMediaInputs');
        const initialBodyMediaIds = {{ values.media_ids|json_encode|raw }};
        const bodyMediaSet = new Set((Array.isArray(initialBodyMediaIds) ? initialBodyMediaIds : [])
            .map((id) => Number(id))
            .filter((id) => id > 0));
        const mediaActionButtons = document.querySelectorAll('[data-media-action]');
        let currentMediaAction = 'thumbnail';
        const $bodyEditor = window.jQuery ? window.jQuery('#body') : null;

        const ensureBodyMediaInputs = () => {
            if (!bodyMediaInputs) return;
            bodyMediaSet.forEach((id) => {
                if (!bodyMediaInputs.querySelector(`[data-media-id="${id}"]`)) {
                    const input = document.createElement('input');
                    input.type = 'hidden';
                    input.name = 'media_ids[]';
                    input.value = String(id);
                    input.dataset.mediaId = String(id);
                    bodyMediaInputs.appendChild(input);
                }
            });
        };

        const addBodyMediaId = (id) => {
            if (!bodyMediaInputs) return;
            const normalized = Number(id);
            if (Number.isNaN(normalized) || normalized <= 0 || bodyMediaSet.has(normalized)) {
                return;
            }

            bodyMediaSet.add(normalized);
            const input = document.createElement('input');
            input.type = 'hidden';
            input.name = 'media_ids[]';
            input.value = String(normalized);
            input.dataset.mediaId = String(normalized);
            bodyMediaInputs.appendChild(input);
        };

        const removeBodyMediaId = (id) => {
            if (!bodyMediaInputs) return;
            const normalized = Number(id);
            if (Number.isNaN(normalized) || normalized <= 0) {
                return;
            }

            bodyMediaSet.delete(normalized);
            const existing = bodyMediaInputs.querySelector(`[data-media-id="${normalized}"]`);
            if (existing) {
                existing.remove();
            }
        };

        ensureBodyMediaInputs();

        function updatePreview(url, label) {
            if (!thumbnailPreview) return;
            if (!url) {
                thumbnailPreview.style.display = 'none';
                thumbnailPreview.innerHTML = '';
                return;
            }

            thumbnailPreview.style.display = '';
            thumbnailPreview.innerHTML = `<img src="${url}" class="img-fluid" alt="">` +
                `<div class="small mt-1 text-muted">${label || ''}</div>`;
        }

        function setSelectedThumbnail(id, url, label) {
            if (!thumbnailInput) return;
            const hasThumbnail = Boolean(id && url);
            thumbnailInput.value = id || '';
            updatePreview(hasThumbnail ? url : '', label);
            if (removeThumbnailBtn) {
                removeThumbnailBtn.classList.toggle('d-none', !hasThumbnail);
            }
        }

        function openMediaModalFor(action) {
            currentMediaAction = action || 'thumbnail';
            if (mediaModalEl) {
                const modalInstance = bootstrap.Modal.getOrCreateInstance(mediaModalEl);
                modalInstance.show();
            }
        }

        function insertImageToEditor(id, url, label) {
            if (!$bodyEditor || typeof $bodyEditor.summernote !== 'function') {
                return;
            }

            $bodyEditor.summernote('insertImage', url, function ($image) {
                if ($image && typeof $image.attr === 'function') {
                    if (id) {
                        $image.attr('data-media-id', id);
                    }
                    if (label) {
                        $image.attr('alt', label);
                    }
                }
            });

            addBodyMediaId(Number(id));
        }

        const handleMediaSelection = (id, url, label) => {
            if (currentMediaAction === 'body') {
                insertImageToEditor(id, url, label);
            } else {
                setSelectedThumbnail(id, url, label);
            }

            if (mediaModalEl) {
                const modalInstance = bootstrap.Modal.getInstance(mediaModalEl);
                if (modalInstance) {
                    modalInstance.hide();
                }
            }
        };

        if ($bodyEditor && typeof $bodyEditor.summernote === 'function') {
            $bodyEditor.summernote({
                height: 320,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['insert', ['link', 'imageLibrary']],
                    ['view', ['codeview']],
                ],
                buttons: {
                    imageLibrary: function () {
                        const ui = $.summernote.ui;
                        return ui.button({
                            contents: '<i class="bi bi-image"></i>',
                            tooltip: 'Vložit obrázek z knihovny',
                            click: () => openMediaModalFor('body'),
                        }).render();
                    },
                },
                callbacks: {
                    onMediaDelete(target) {
                        const mediaId = Number(target?.data && typeof target.data === 'function'
                            ? target.data('media-id')
                            : target?.getAttribute?.('data-media-id'));
                        if (!Number.isNaN(mediaId)) {
                            removeBodyMediaId(mediaId);
                        }
                    },
                },
            });
        }

        if (removeThumbnailBtn) {
            removeThumbnailBtn.addEventListener('click', function () {
                setSelectedThumbnail('', '', '');
            });
        }

        if (deleteContentTrigger && deleteContentForm) {
            deleteContentTrigger.addEventListener('click', async function () {
                const message = deleteContentTrigger.dataset.confirmMessage || 'Opravdu smazat tento obsah?';
                const confirmFn = (typeof adminDialog !== 'undefined' && typeof adminDialog.confirm === 'function')
                    ? adminDialog.confirm
                    : (typeof adminNotify !== 'undefined' && typeof adminNotify.confirm === 'function'
                        ? adminNotify.confirm
                        : (msg) => Promise.resolve(window.confirm(msg)));

                const confirmed = await confirmFn(message, {variant: 'danger'});
                if (confirmed) {
                    deleteContentForm.submit();
                }
            });
        }

        mediaActionButtons.forEach((button) => {
            button.addEventListener('click', () => {
                currentMediaAction = button.dataset.mediaAction || 'thumbnail';
            });
        });

        if (mediaGrid) {
            mediaGrid.addEventListener('click', function (event) {
                const card = event.target.closest('.media-card');
                if (!card) return;

                const id = card.dataset.mediaId;
                const url = card.dataset.mediaUrl;
                const label = card.dataset.mediaLabel;
                handleMediaSelection(id, url, label);
            });

            if (mediaEmptyAlert) {
                mediaEmptyAlert.style.display = mediaGrid.querySelector('.media-card') ? 'none' : '';
            }
        }

        const mediaUploadForm = document.getElementById('mediaUploadForm');
        if (mediaUploadForm) {
            mediaUploadForm.addEventListener('submit', async function (event) {
                event.preventDefault();

                const formData = new FormData(mediaUploadForm);
                try {
                    const response = await fetch('/admin/media/upload', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest',
                            'Accept': 'application/json'
                        }
                    });

                    const result = await response.json();
                    const payload = result.data || result || {};

                    if (!response.ok || result.error || result.success === false) {
                        adminDialog.alert(result.error || result.message || 'Nahrávání se nezdařilo.', {variant: 'danger'});
                        return;
                    }

                    if (!payload.is_image) {
                        adminDialog.alert('Vybraný soubor není obrázek.', {variant: 'warning'});
                        return;
                    }

                    const basePath = (payload.path || '').trim();
                    const normalizedPath = basePath.startsWith('/') ? basePath : (basePath ? `/${basePath}` : '');
                    const fileName = payload.webp_filename || payload.filename || '';
                    const url = payload.preview_url
                        || (fileName ? `${normalizedPath.replace(/\/$/, '')}/${fileName}` : normalizedPath)
                        || '';
                    const label = payload.original_name || payload.filename || `Médium #${payload.id || ''}`;

                    appendMediaCard(payload.id, url, label);
                    handleMediaSelection(payload.id, url, label);
                    mediaUploadForm.reset();
                } catch (error) {
                    adminDialog.alert('Nahrávání se nezdařilo.', {variant: 'danger'});
                }
            });
        }

        function appendMediaCard(id, url, label) {
            if (!mediaGrid) return;
            if (mediaEmptyAlert) {
                mediaEmptyAlert.style.display = 'none';
            }

            const col = document.createElement('div');
            col.className = 'col';
            col.innerHTML = `
                <div class="card h-100 media-card" role="button" tabindex="0" data-media-id="${id}" data-media-url="${url}" data-media-label="${label}">
                    <img src="${url}" class="card-img-top" alt="">
                    <div class="card-body p-2">
                        <div class="small text-truncate" title="${label}">${label}</div>
                    </div>
                </div>
            `;
            mediaGrid.prepend(col);
        }

        const termTypeLabels = {
            {% for typeKey, typeDef in allowed_term_types %}
            "{{ typeKey }}": "{{ typeDef.label|default(typeKey)|e('js') }}",
            {% endfor %}
        };

        const termOptionsByType = {};
        termOptions.forEach((option) => {
            const type = option.type;
            if (!termOptionsByType[type]) {
                termOptionsByType[type] = [];
            }
            termOptionsByType[type].push(option);
        });

        const selectedByType = {};
        selectedTermIds.forEach((id) => {
            const match = termOptions.find((option) => Number(option.value) === Number(id));
            if (match) {
                if (!selectedByType[match.type]) {
                    selectedByType[match.type] = [];
                }
                selectedByType[match.type].push(match);
            }
        });

        const enhanceTagData = (tag, typeKey) => {
            const normalizedType = typeKey || tag.type || '';
            return {
                value: tag.value,
                name: tag.name || tag.value,
                type: normalizedType,
                type_label: tag.type_label || termTypeLabels[normalizedType] || normalizedType,
            };
        };

        const syncHiddenTerms = (typeKey, tags) => {
            const container = document.getElementById(`termHiddenContainer_${typeKey}`);
            if (!container) return;

            container.innerHTML = '';
            tags.forEach((tag) => {
                const value = Number(tag.value);
                if (Number.isNaN(value)) return;

                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = `terms[${typeKey}][]`;
                input.value = String(value);
                container.appendChild(input);
            });
        };

        const showTermError = (typeKey, message = '') => {
            const errorBox = document.getElementById(`termPickerErrors_${typeKey}`);
            if (!errorBox) return;

            errorBox.textContent = message;
            errorBox.classList.toggle('d-none', message === '');
        };

        const createTerm = async (tagData, typeKey) => {
            const name = (tagData.name || tagData.value || '').trim();
            const type = typeKey || tagData.type || '';

            if (!name || !type) {
                return Promise.reject('Vyplň název termu.');
            }

            const formData = new FormData();
            formData.append('name', name);
            formData.append('type', type);

            const response = await fetch('/admin/content/{{ current_type.slug }}/terms', {
                method: 'POST',
                body: formData,
                headers: {
                    'X-Requested-With': 'XMLHttpRequest',
                    'Accept': 'application/json',
                },
            });

            const result = await response.json();
            if (!response.ok || result.error) {
                throw new Error(result.error || 'Vytvoření termu se nezdařilo.');
            }

            return {
                value: String(result.id),
                name: result.name,
                type: result.type,
                type_label: result.type_label || termTypeLabels[result.type] || result.type,
            };
        };

        const initTermPicker = (typeKey) => {
            const input = document.getElementById(`termPicker_${typeKey}`);
            if (!input || typeof Tagify === 'undefined') return;

            const whitelist = termOptionsByType[typeKey] || [];
            const tagify = new Tagify(input, {
                whitelist,
                enforceWhitelist: false,
                tagTextProp: 'name',
                dropdown: {
                    enabled: 0,
                    maxItems: 12,
                    searchKeys: ['name'],
                },
                templates: {
                    dropdownItem(tagData) {
                        return `
                            <div ${this.getAttributes(tagData)}
                                 class="tagify__dropdown__item">
                                <span>${tagData.name || tagData.value}</span>
                            </div>
                        `;
                    },
                },
                editTags: false,
                duplicates: false,
                originalInputValueFormat: (values) =>
                    JSON.stringify(values.map((tag) => enhanceTagData(tag, typeKey))),
            });

            const initialTags = selectedByType[typeKey] || [];
            if (initialTags.length) {
                tagify.addTags(initialTags);
                syncHiddenTerms(typeKey, tagify.value);
            }

            tagify.on('add', async (event) => {
                showTermError(typeKey);
                const tagData = enhanceTagData(event.detail.data || {}, typeKey);

                if (tagData.value && !Number.isNaN(Number(tagData.value))) {
                    syncHiddenTerms(typeKey, tagify.value);
                    return;
                }

                try {
                    const created = await createTerm(tagData, typeKey);
                    termOptionsByType[typeKey] = termOptionsByType[typeKey] || [];
                    termOptionsByType[typeKey].push(created);
                    tagify.replaceTag(event.detail.tag, created);
                    syncHiddenTerms(typeKey, tagify.value);
                } catch (error) {
                    tagify.removeTags(event.detail.tag);
                    showTermError(typeKey, error.message || 'Vytvoření termu se nezdařilo.');
                    adminDialog.alert(error.message || 'Vytvoření termu se nezdařilo.', {variant: 'danger'});
                }
            });

            tagify.on('remove', () => {
                syncHiddenTerms(typeKey, tagify.value);
            });

            tagify.on('invalid', (event) => {
                showTermError(typeKey, event.detail.message || 'Term nelze přidat.');
            });
        };

        Object.keys(termTypeLabels).forEach((typeKey) => initTermPicker(typeKey));

        // přepínání stavu a ukládání přes tlačítka
        (function () {
            const statusInput = document.getElementById('statusField');
            if (!statusInput) return;

            const statusButtons = document.querySelectorAll('.status-submit');

            const setStatus = (status) => {
                statusInput.value = status || 'draft';
            };

            statusButtons.forEach((button) => {
                button.addEventListener('click', () => {
                    const desiredStatus = button.getAttribute('data-status-action') || 'draft';
                    setStatus(desiredStatus);
                });
            });

            if (!statusInput.value) {
                setStatus('draft');
            }
        })();
    </script>
