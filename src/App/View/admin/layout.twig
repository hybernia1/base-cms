{# src/App/View/admin/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Administrace{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">

    {# Bootstrap 5 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css">
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify"></script>

    <style>
        /* Layout adminu */
        :root {
            font-size: 15px;
        }

        body {
            min-height: 100vh;
        }

        .admin-wrapper {
            display: flex;
            min-height: calc(100vh - 56px); /* 56px = výška navbaru */
        }

        .admin-sidebar {
            width: 240px;
            flex-shrink: 0;
        }

        .admin-content {
            flex: 1;
            padding: 1.25rem;
        }

        .card-body {
            padding: 1.1rem;
        }

        .card-header {
            padding: 0.85rem 1.1rem;
        }

        /* Malé displeje: sidebar je offcanvas */
        @media (max-width: 991.98px) {
            .admin-sidebar {
                display: none;
            }

            .admin-content {
                padding: 1rem;
            }

            .navbar .btn {
                padding: 0.35rem 0.75rem;
            }

            .navbar-brand {
                font-size: 1rem;
            }
        }

        /* Optional: aktivní link */
        .nav-link.active {
            font-weight: 600;
        }

        .menu-toggle {
            cursor: pointer;
        }

        .menu-chevron {
            transition: transform 0.2s ease;
        }

        .menu-chevron.rotate {
            transform: rotate(90deg);
        }

        .badge-webp {
            font-size: 0.75rem;
        }
    </style>

    {% block styles %}{% endblock %}
</head>
<body>

<div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>
<div class="toast align-items-center text-bg-primary border-0 d-none" id="toastTemplate" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body w-100">
            <div class="fw-semibold small text-white-50 text-uppercase" data-role="toast-title"></div>
            <div data-role="toast-message"></div>
            <div class="mt-2 pt-2 border-top border-light-subtle d-none d-flex gap-2 flex-wrap" data-role="toast-actions"></div>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

{# TOP NAVBAR #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <button class="btn btn-outline-light d-lg-none me-2" type="button"
                data-bs-toggle="offcanvas" data-bs-target="#adminSidebarOffcanvas"
                aria-controls="adminSidebarOffcanvas">
            <span class="navbar-toggler-icon"></span>
        </button>

        <a class="navbar-brand" href="/admin">Admin</a>

        <div class="d-flex ms-auto gap-2">
            {% if app_user is defined and app_user %}
                <span class="navbar-text me-3 d-none d-sm-inline">
                    {{ app_user.email }} ({{ app_user.role|default('') }})
                </span>
            {% endif %}
            <a href="/" class="btn btn-outline-light btn-sm" target="_blank" rel="noopener">Otevřít web</a>
            <form action="/admin/logout" method="get" class="mb-0">
                <button class="btn btn-light btn-sm" type="submit">Odhlásit</button>
            </form>
        </div>
    </div>
</nav>

