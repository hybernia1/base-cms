{% extends 'admin/layout.twig' %}

{% set current_menu = current_type.slug %}

{% block title %}Obsah | Administrace{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">{{ current_type.plural_name|default('Obsah') }}</h1>
        <a href="/admin/content/{{ current_type.slug }}/create" class="btn btn-primary">Nový {{ current_type.name|lower }}</a>
    </div>

    <ul class="nav nav-pills mb-3">
        <li class="nav-item">
            <a class="nav-link {% if current_status == 'published' %}active{% endif %}" href="/admin/content/{{ current_type.slug }}?status=published">Publikované</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if current_status == 'draft' %}active{% endif %}" href="/admin/content/{{ current_type.slug }}?status=draft">Koncepty</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if current_status not in ['published','draft'] %}active{% endif %}" href="/admin/content/{{ current_type.slug }}">Vše</a>
        </li>
    </ul>

    {% if items is empty %}
        <div class="alert alert-info">
            {% if current_status == 'published' %}
                Zatím zde není žádný publikovaný obsah.
            {% elseif current_status == 'draft' %}
                Zatím zde nejsou žádné koncepty.
            {% else %}
                Zatím zde není žádný obsah.
            {% endif %}
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Typ</th>
                        <th>Stav</th>
                        <th>Slug</th>
                        <th>Upraveno</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td class="fw-semibold">{{ item.title }}</td>
                            <td>{{ types[item.type]|default(item.type) }}</td>
                            <td>
                                {% if item.status == 'published' %}
                                    <span class="badge text-bg-success">Publikováno</span>
                                {% else %}
                                    <span class="badge text-bg-secondary">Draft</span>
                                {% endif %}
                            </td>
                            <td><code>{{ item.slug }}</code></td>
                            <td>{{ item.updated_at|date('j. n. Y H:i') }}</td>
                            <td class="text-end">
                                <a href="/admin/content/{{ current_type.slug }}/{{ item.id }}/edit" class="btn btn-sm btn-outline-primary">Upravit</a>
                                <form action="/admin/content/{{ current_type.slug }}/{{ item.id }}/delete" method="post" class="d-inline" data-confirm="Opravdu smazat tento obsah?">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Smazat</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
