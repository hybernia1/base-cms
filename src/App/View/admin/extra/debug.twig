{% extends 'admin/layout.twig' %}

{% block title %}Debug mód | Administrace{% endblock %}

{% block body %}
    <h1 class="h3 mb-4 d-flex align-items-center gap-2">Debug mód
        <span class="badge {% if is_debug %}bg-warning text-dark{% else %}bg-secondary{% endif %}">
            {{ is_debug ? 'Aktivní' : 'Vypnutý' }}
        </span>
    </h1>

    <div class="card shadow-sm">
        <div class="card-body p-4 d-flex flex-wrap gap-3 justify-content-between align-items-start">
            <div class="me-4">
                <h2 class="h5 mb-2">Přepnout režim</h2>
                <p class="text-muted mb-3">Spravuj přepnutí mezi produkčním a vývojovým režimem. Změna přepíše soubor <code>config.php</code>.</p>
                <div class="d-inline-flex align-items-center gap-2 flex-wrap">
                    <span class="badge {% if is_debug %}bg-warning text-dark{% else %}bg-success{% endif %}">Aktuálně: {{ is_debug ? 'dev' : 'prod' }}</span>
                    <span class="text-muted small">(env)</span>
                </div>
            </div>
            <form method="post" action="/admin/extra/debug" class="d-flex align-items-center">
                <input type="hidden" name="toggle_debug" value="1">
                <button type="submit" class="btn {% if is_debug %}btn-outline-secondary{% else %}btn-outline-warning{% endif %}">
                    <i class="bi bi-bug me-2"></i>
                    {{ is_debug ? 'Vypnout debug' : 'Zapnout debug' }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}
