{# src/App/View/admin/layout.twig #}
<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Administrace{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, viewport-fit=cover">

    {# Bootstrap 5 #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@yaireo/tagify@4.21.4/dist/tagify.css">
    <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify@4.21.4/dist/tagify.min.js"></script>

    <link rel="stylesheet" href="/assets/css/admin.css">

    {% block styles %}{% endblock %}
</head>
<body data-flash-success='{{ flash_success|json_encode|e('html_attr') }}'
      data-flash-error='{{ flash_error|json_encode|e('html_attr') }}'>

<div class="toast-container position-fixed top-0 end-0 p-3" id="toastContainer"></div>
<div class="toast align-items-center text-bg-primary border-0 d-none" id="toastTemplate" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="d-flex">
        <div class="toast-body w-100">
            <div class="fw-semibold small text-white-50 text-uppercase" data-role="toast-title"></div>
            <div data-role="toast-message"></div>
            <div class="mt-2 pt-2 border-top border-light-subtle d-none d-flex gap-2 flex-wrap" data-role="toast-actions"></div>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
    </div>
</div>

{% import 'admin/partials/admin_bar.twig' as admin_ui %}

{% set admin_bar = {
    container_class: 'container-fluid',
    menu_toggle: { target: 'adminSidebarOffcanvas', label: 'Menu' },
    dashboard_url: '/admin',
    open_site_url: '/',
    user_role_label: (app_user is defined and app_user) ? app_user.role : null,
    user_label: (app_user is defined and app_user) ? app_user.email : null,
    is_debug: app_is_debug|default(false),
    user_links: [
        { url: '/', icon: 'bi-box-arrow-up-right', label: 'Otevřít web', target: '_blank' },
        { url: '/admin/logout', icon: 'bi-box-arrow-right', label: 'Odhlásit' }
    ]
} %}

{{ admin_ui.admin_bar(admin_bar) }}

<div class="admin-wrapper">

    {# SIDEBAR na desktopu #}
    <aside class="admin-sidebar d-none d-lg-block">
        <div class="fw-bold mb-3 text-uppercase small text-muted">
            Navigace
        </div>
            {% set settings_sections = settings_sections|default({
                'main': {'label': 'Základní', 'icon': 'bi-gear', 'url': '/admin/settings/main'},
                'uploads': {'label': 'Uploady', 'icon': 'bi-upload', 'url': '/admin/settings/uploads'},
                'email': {'label': 'E-maily', 'icon': 'bi-envelope', 'url': '/admin/settings/email'},
                'comments': {'label': 'Komentáře', 'icon': 'bi-chat-dots', 'url': '/admin/settings/comments'},
                'content-types': {'label': 'Typy obsahu', 'icon': 'bi-journal-text', 'url': '/admin/settings/content-types'},
                'term-types': {'label': 'Typy termů', 'icon': 'bi-tags', 'url': '/admin/settings/term-types'}
            }) %}
            <ul class="nav nav-pills flex-column">
                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'dashboard' %}active{% endif %}"
                       href="/admin">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                {% if content_type_menu is defined %}
                    {% for type in content_type_menu %}
                        {% set isActive = current_menu is defined and current_menu == type.slug %}
                        {% set isCreate = form_action is defined and ('/create' in form_action) and isActive %}
                        {% set createPrefix = type.key is defined and type.key == 'page' ? 'Nová' : 'Nový' %}
                        {% set menuId = 'content-menu-' ~ type.slug ~ '-desktop' %}
                        <li class="nav-item mb-1">
                            <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle"
                                    type="button"
                                    data-bs-toggle="collapse"
                                    data-bs-target="#{{ menuId }}"
                                    aria-controls="{{ menuId }}"
                                    aria-expanded="{{ isActive ? 'true' : 'false' }}">
                                <i class="bi bi-journal-text me-2"></i> {{ type.menu_label }}
                                <i class="bi bi-chevron-right ms-auto menu-chevron {% if isActive %}rotate{% endif %}"></i>
                            </button>
                            <div class="collapse {% if isActive %}show{% endif %}" id="{{ menuId }}">
                                <ul class="nav flex-column ms-3 mt-1 small">
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if isActive and not isCreate %}active{% endif %}" href="/admin/content/{{ type.slug }}">
                                            <i class="bi bi-list-ul me-2"></i> Přehled
                                        </a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if isCreate %}active{% endif %}" href="/admin/content/{{ type.slug }}/create">
                                            <i class="bi bi-plus-circle me-2"></i> {{ createPrefix }} {{ type.name|lower }}
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    {% endfor %}
                {% endif %}

                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'media:gallery' %}active{% endif %}"
                       href="/admin/media/gallery">
                        <i class="bi bi-images me-2"></i> Galerie
                    </a>
                </li>
                <li class="nav-item mb-1">
                    <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'media:files' %}active{% endif %}"
                       href="/admin/media/files">
                        <i class="bi bi-folder2-open me-2"></i> Soubory
                    </a>
                </li>

                <li class="nav-item mb-1">
                    {% set termsActive = current_menu is defined and current_menu starts with 'terms' %}
                    {% set termsMenuId = 'terms-menu-desktop' %}
                    <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#{{ termsMenuId }}"
                            aria-controls="{{ termsMenuId }}"
                            aria-expanded="{{ termsActive ? 'true' : 'false' }}">
                        <i class="bi bi-tags me-2"></i> Termy
                        <i class="bi bi-chevron-right ms-auto menu-chevron {% if termsActive %}rotate{% endif %}"></i>
                    </button>
                    <div class="collapse {% if termsActive %}show{% endif %}" id="{{ termsMenuId }}">
                        <ul class="nav flex-column ms-3 mt-1 small">
                            {% if term_type_menu is defined %}
                                {% for termKey, termDef in term_type_menu %}
                                    {% set termIsActive = current_menu is defined and current_menu == 'terms:' ~ termKey %}
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if termIsActive %}active{% endif %}" href="/admin/terms/type/{{ termKey }}">
                                            <i class="bi bi-collection me-2"></i> {{ termDef.label|default(termKey) }}
                                        </a>
                                    </li>
                                {% else %}
                                    <li class="nav-item">
                                        <span class="nav-link text-muted">Žádné typy termů.</span>
                                    </li>
                                {% endfor %}
                            {% endif %}
                        </ul>
                    </div>
                </li>

                {% set isAdmin = app_user is defined and app_user and app_user.role == 'admin' %}
                {% set isEditor = app_user is defined and app_user and app_user.role in ['admin', 'editor'] %}
                {% if isAdmin %}
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'users' %}active{% endif %}"
                           href="/admin/users">
                            <i class="bi bi-people me-2"></i> Uživatelé
                        </a>
                    </li>
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'email_templates' %}active{% endif %}"
                           href="/admin/email-templates">
                            <i class="bi bi-envelope-paper me-2"></i> E-mailové šablony
                        </a>
                    </li>
                {% endif %}
                {% if isEditor %}
                    <li class="nav-item mb-1">
                        <a class="nav-link d-flex align-items-center {% if current_menu is defined and current_menu == 'comments' %}active{% endif %}"
                           href="/admin/comments">
                            <i class="bi bi-chat-dots me-2"></i> Komentáře
                        </a>
                    </li>
                {% endif %}
                {% set settingsActive = current_menu is defined and current_menu starts with 'settings' %}
                {% set settingsMenuId = 'settings-menu-desktop' %}
                {% if isAdmin %}
                    <li class="nav-item mb-1">
                        <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle"
                                type="button"
                                data-bs-toggle="collapse"
                                data-bs-target="#{{ settingsMenuId }}"
                                aria-controls="{{ settingsMenuId }}"
                                aria-expanded="{{ settingsActive ? 'true' : 'false' }}">
                            <i class="bi bi-gear me-2"></i> Nastavení
                            <i class="bi bi-chevron-right ms-auto menu-chevron {% if settingsActive %}rotate{% endif %}"></i>
                        </button>
                        <div class="collapse {% if settingsActive %}show{% endif %}" id="{{ settingsMenuId }}">
                            <ul class="nav flex-column ms-3 mt-1 small">
                                {% for key, section in settings_sections %}
                                    {% set itemActive = current_menu is defined and current_menu == 'settings:' ~ key %}
                                    <li class="nav-item">
                                        <a class="nav-link d-flex align-items-center {% if itemActive %}active{% endif %}" href="{{ section.url|default('/admin/settings/' ~ key) }}">
                                            <i class="bi {{ section.icon|default('bi-gear') }} me-2"></i> {{ section.label|default(key) }}
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </li>
                {% endif %}
                {% set extraActive = current_menu is defined and current_menu starts with 'extra' %}
                {% set extraMenuId = 'extra-menu-desktop' %}
                <li class="nav-item mb-1">
                    <button class="nav-link d-flex align-items-center w-100 text-start menu-toggle"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#{{ extraMenuId }}"
                            aria-controls="{{ extraMenuId }}"
                            aria-expanded="{{ extraActive ? 'true' : 'false' }}">
                        <i class="bi bi-stars me-2"></i> Extra
                        <i class="bi bi-chevron-right ms-auto menu-chevron {% if extraActive %}rotate{% endif %}"></i>
                    </button>
                    <div class="collapse {% if extraActive %}show{% endif %}" id="{{ extraMenuId }}">
                        <ul class="nav flex-column ms-3 mt-1 small">
                            {% set extraInfoActive = current_menu is defined and current_menu == 'extra:info' %}
                            {% set extraBackupActive = current_menu is defined and current_menu == 'extra:backup' %}
                            {% set extraDebugActive = current_menu is defined and current_menu == 'extra:debug' %}
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if extraInfoActive %}active{% endif %}" href="/admin/extra/info">
                                    <i class="bi bi-info-circle me-2"></i> Info o webu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if extraDebugActive %}active{% endif %}" href="/admin/extra/debug">
                                    <i class="bi bi-bug me-2"></i> Debug mód
                                    {% if app_is_debug|default(false) %}<span class="badge bg-warning text-dark ms-auto">Aktivní</span>{% endif %}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link d-flex align-items-center {% if extraBackupActive %}active{% endif %}" href="/admin/extra/backup">
                                    <i class="bi bi-cloud-download me-2"></i> Záloha databáze
                                </a>
                            </li>
                        </ul>
                    </div>
                </li>
                {# další odkazy... #}
            </ul>
    </aside>

