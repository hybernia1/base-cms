{% extends 'admin/layout.twig' %}

{% set current_menu = 'email_templates' %}
{% import 'admin/partials/components.twig' as ui %}

{% block title %}E-mailové šablony | Administrace{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-3">
        <h1 class="h4 mb-0">E-mailové šablony</h1>
    </div>

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table mb-0 align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Událost</th>
                        <th>Předmět</th>
                        <th class="text-center">Odesílat</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                {% for template in templates %}
                    <tr>
                        <td>{{ template.event }}</td>
                        <td>{{ template.subject }}</td>
                        <td class="text-center">
                            <form method="post" action="/admin/email-templates/{{ template.event }}/toggle" class="d-inline">
                                <input type="hidden" name="enabled" value="{{ template.enabled ? '0' : '1' }}">
                                <button type="submit"
                                        class="btn btn-sm btn-icon {{ template.enabled ? 'btn-success' : 'btn-outline-secondary' }}"
                                        title="{{ template.enabled ? 'Vypnout odesílání' : 'Zapnout odesílání' }}"
                                        aria-label="{{ template.enabled ? 'Vypnout odesílání' : 'Zapnout odesílání' }}">
                                    <i class="bi {{ template.enabled ? 'bi-check-lg' : 'bi-slash-circle' }}"></i>
                                </button>
                            </form>
                        </td>
                        <td class="text-end">
                            {{ ui.actions([
                                {
                                    type: 'link',
                                    href: '/admin/email-templates/' ~ template.event,
                                    label: 'Upravit',
                                    variant: 'secondary',
                                    icon: 'bi-pencil'
                                }
                            ], 'sm') }}
                        </td>
                    </tr>
                {% else %}
                    {% for event, tpl in defaults %}
                        <tr>
                            <td>{{ event }}</td>
                            <td>{{ tpl.subject }}</td>
                            <td class="text-center">
                                <span class="badge bg-secondary">Neuloženo</span>
                            </td>
                            <td class="text-end">
                                {{ ui.actions([
                                    {
                                        type: 'link',
                                        href: '/admin/email-templates/' ~ event,
                                        label: 'Upravit',
                                        variant: 'secondary',
                                        icon: 'bi-pencil'
                                    }
                                ], 'sm') }}
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
