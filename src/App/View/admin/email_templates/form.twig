{% extends 'admin/layout.twig' %}

{% import 'admin/partials/components.twig' as ui %}

{% set current_menu = 'email_templates' %}

{% block title %}Upravit šablonu | Administrace{% endblock %}

{% block body %}
    <div class="d-flex align-items-center mb-3 gap-2">
        <h1 class="h4 mb-0">Upravit šablonu: {{ template.event }}</h1>
        {{ ui.back_button('/admin/email-templates', { label: 'Zpět' }) }}
    </div>

    <form method="post" action="/admin/email-templates/{{ template.event }}" class="card shadow-sm" id="emailTemplateForm">
        <div class="card-body p-4">
            <div class="mb-3">
                <label class="form-label">Předmět</label>
                <input type="text" name="subject" value="{{ template.subject }}" class="form-control" required>
            </div>

            <div class="mb-3">
                <label class="form-label">HTML obsah</label>
                <textarea name="body_html" class="form-control" rows="6" required>{{ template.body_html }}</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Textová varianta</label>
                <textarea name="body_text" class="form-control" rows="4" required>{{ template.body_text }}</textarea>
            </div>

            <div class="form-check form-switch mb-3">
                <input class="form-check-input" type="checkbox" role="switch" id="enabledSwitch" name="enabled" value="1" {{ template.enabled ? 'checked' }}>
                <label class="form-check-label" for="enabledSwitch">Odesílat tento e-mail</label>
            </div>

            <div class="alert alert-info">
                <div class="fw-bold">Dostupné proměnné:</div>
                <ul class="mb-0">
                    <li><code>{{ '{{site_name}}' }}</code></li>
                    <li><code>{{ '{{email}}' }}</code></li>
                    <li><code>{{ '{{reason}}' }}</code></li>
                    <li><code>{{ '{{reset_link}}' }}</code></li>
                </ul>
            </div>
        </div>
        <div class="card-footer bg-light d-flex justify-content-between align-items-center flex-wrap gap-2">
            {{ ui.back_button('/admin/email-templates', { label: 'Zpět' }) }}
            {{ ui.actions([
                {
                    type: 'button',
                    button_type: 'submit',
                    label: 'Uložit',
                    variant: 'primary',
                    icon: 'bi-save'
                }
            ]) }}
        </div>
    </form>
{% endblock %}
