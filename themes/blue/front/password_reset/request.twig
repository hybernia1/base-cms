{% extends 'front/layout.twig' %}

{% block title %}Reset hesla | Můj web{% endblock %}

{% block body %}
    <h1>Reset hesla</h1>
    <p class="mb-3">Zadejte svůj e-mail a pošleme vám odkaz pro nastavení nového hesla.</p>

    <form method="post" action="/password-reset" class="card p-4 shadow-sm">
        <div class="mb-3">
            <label class="form-label" for="email">E-mail</label>
            <input type="email" name="email" id="email" class="form-control" value="{{ values.email }}" required>
            {% if errors.email %}
                <div class="text-danger small mt-1">{{ errors.email }}</div>
            {% endif %}
        </div>

        <button type="submit" class="btn btn-primary">Odeslat odkaz</button>
        <a href="/login" class="btn btn-link">Zpět na přihlášení</a>
    </form>
{% endblock %}
