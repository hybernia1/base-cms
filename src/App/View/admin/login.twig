<!doctype html>
<html lang="cs">
<head>
    <meta charset="utf-8">
    <title>Admin login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <style>
        :root {
            --login-bg: linear-gradient(135deg, #f5f7fb 0%, #eef2f7 100%);
            --login-card: #ffffff;
            --login-border: #e5e7eb;
            --login-accent: #2563eb;
        }

        body {
            background: var(--login-bg);
            min-height: 100vh;
            display: flex;
            align-items: center;
            color: #0f172a;
            font-family: "Inter", system-ui, -apple-system, sans-serif;
        }

        .login-card {
            border-radius: 16px;
            border: 1px solid var(--login-border);
            box-shadow: 0 20px 50px rgba(15, 23, 42, 0.08);
            background: var(--login-card);
        }

        .form-label {
            font-weight: 600;
            color: #64748b;
        }

        .form-control {
            border-radius: 12px;
            border-color: var(--login-border);
            background: #fbfcff;
        }

        .form-control:focus {
            border-color: var(--login-accent);
            box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.15);
        }

        .btn-primary {
            border-radius: 12px;
            font-weight: 700;
            box-shadow: 0 10px 24px rgba(37, 99, 235, 0.18);
        }

        .login-icon {
            width: 56px;
            height: 56px;
            border-radius: 50%;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: rgba(37, 99, 235, 0.12);
            color: var(--login-accent);
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6">
                <div class="text-center mb-4">
                    <span class="login-icon mb-3"><i class="bi bi-shield-lock"></i></span>
                    <h1 class="h4 fw-bold">Administrace</h1>
                    <p class="text-muted mb-0">Přihlášení do administrace</p>
                </div>

                {% if success %}
                    <div class="alert alert-success">{{ success }}</div>
                {% endif %}
                {% if error %}
                    <div class="alert alert-danger">{{ error }}</div>
                {% endif %}

                <div class="login-card p-4">
                    <form method="post" action="/admin/login" class="d-flex flex-column gap-3">
                        <input type="hidden" name="_csrf" value="{{ csrf_token('admin_login') }}">
                        <div>
                            <label class="form-label">E-mail</label>
                            <input type="email" name="email" class="form-control" required>
                        </div>
                        <div>
                            <label class="form-label">Heslo</label>
                            <input type="password" name="password" class="form-control" required>
                        </div>
                        <button class="btn btn-primary w-100" type="submit">
                            <i class="bi bi-box-arrow-in-right me-2"></i>
                            Přihlásit
                        </button>
                        <a href="/password-reset" class="btn btn-link text-center">Zapomněli jste heslo?</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
