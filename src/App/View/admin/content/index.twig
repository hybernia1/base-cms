{% extends 'admin/layout.twig' %}

{% set current_menu = current_type.slug %}

{% block title %}Obsah | Administrace{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">{{ current_type.plural_name|default('Obsah') }}</h1>
        <a href="/admin/content/{{ current_type.slug }}/create" class="btn btn-primary">Nový {{ current_type.name|lower }}</a>
    </div>

    <ul class="nav nav-pills mb-3">
        <li class="nav-item">
            <a class="nav-link {% if current_status == 'published' %}active{% endif %}" href="/admin/content/{{ current_type.slug }}?status=published{% if search_query %}&q={{ search_query|url_encode }}{% endif %}{% if pagination.per_page != 10 %}&per_page={{ pagination.per_page }}{% endif %}">Publikované</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if current_status == 'draft' %}active{% endif %}" href="/admin/content/{{ current_type.slug }}?status=draft{% if search_query %}&q={{ search_query|url_encode }}{% endif %}{% if pagination.per_page != 10 %}&per_page={{ pagination.per_page }}{% endif %}">Koncepty</a>
        </li>
        <li class="nav-item">
            <a class="nav-link {% if current_status not in ['published','draft'] %}active{% endif %}" href="/admin/content/{{ current_type.slug }}{% if search_query %}?q={{ search_query|url_encode }}{% if pagination.per_page != 10 %}&per_page={{ pagination.per_page }}{% endif %}{% elseif pagination.per_page != 10 %}?per_page={{ pagination.per_page }}{% endif %}">Vše</a>
        </li>
    </ul>

    <form method="get" class="row gy-2 gx-3 align-items-center mb-3">
        {% if current_status != 'all' %}
            <input type="hidden" name="status" value="{{ current_status }}">
        {% endif %}
        <div class="col-md-6">
            <label class="form-label" for="q">Hledat podle názvu nebo slugu</label>
            <div class="input-group">
                <input type="text" class="form-control" id="q" name="q" value="{{ search_query }}" placeholder="Např. článek">
                <button class="btn btn-outline-secondary" type="submit">Filtrovat</button>
                {% if search_query %}
                    <a class="btn btn-outline-danger" href="/admin/content/{{ current_type.slug }}{% if current_status != 'all' %}?status={{ current_status }}{% endif %}">Vymazat</a>
                {% endif %}
            </div>
        </div>
        <div class="col-md-3">
            <label class="form-label" for="per_page">Na stránku</label>
            <select class="form-select" id="per_page" name="per_page" onchange="this.form.submit()">
                {% for option in [10, 20, 50] %}
                    <option value="{{ option }}" {% if pagination.per_page == option %}selected{% endif %}>{{ option }}</option>
                {% endfor %}
            </select>
        </div>
    </form>

    {% if items is empty %}
        <div class="alert alert-info">
            {% if current_status == 'published' %}
                Zatím zde není žádný publikovaný obsah.
            {% elseif current_status == 'draft' %}
                Zatím zde nejsou žádné koncepty.
            {% else %}
                Zatím zde není žádný obsah.
            {% endif %}
        </div>
    {% else %}
        <div class="table-responsive">
            <table class="table align-middle">
                <thead>
                    <tr>
                        <th>Název</th>
                        <th>Typ</th>
                        <th>Stav</th>
                        <th>Slug</th>
                        <th>Upraveno</th>
                        <th class="text-end">Akce</th>
                    </tr>
                </thead>
                <tbody>
                    {% for item in items %}
                        <tr>
                            <td class="fw-semibold">{{ item.title }}</td>
                            <td>{{ types[item.type]|default(item.type) }}</td>
                            <td>
                                {% if item.status == 'published' %}
                                    <span class="badge text-bg-success">Publikováno</span>
                                {% else %}
                                    <span class="badge text-bg-secondary">Draft</span>
                                {% endif %}
                            </td>
                            <td><code>{{ item.slug }}</code></td>
                            <td>{{ item.updated_at|date('j. n. Y H:i') }}</td>
                            <td class="text-end">
                                <a href="/admin/content/{{ current_type.slug }}/{{ item.id }}/edit" class="btn btn-sm btn-outline-primary">Upravit</a>
                                <form action="/admin/content/{{ current_type.slug }}/{{ item.id }}/delete" method="post" class="d-inline" data-confirm="Opravdu smazat tento obsah?" data-ajax data-ajax-remove="tr">
                                    <button class="btn btn-sm btn-outline-danger" type="submit">Smazat</button>
                                </form>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        {% include 'admin/partials/pagination.twig' with { pagination: pagination, filters: filters, base_path: '/admin/content/' ~ current_type.slug } %}
    {% endif %}
{% endblock %}
