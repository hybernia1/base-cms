{% extends 'front/layout.twig' %}

{% block title %}
    {% if term %}{{ term.name }} | {{ term_type.label|default('Term') }}{% else %}Term nenalezen{% endif %}
{% endblock %}

{% block body %}
    <div class="mb-4">
        <p class="article-meta mb-1 text-uppercase">{{ term_type.label|default('Archiv') }}</p>
        <h1 class="article-title mb-2" style="font-size: clamp(1.8rem, 3vw, 2.3rem);">{{ heading|default(term.name|default('Term')) }}</h1>
        {% if term and term.description %}
            <p class="article-subtitle mb-0">{{ term.description|nl2br }}</p>
        {% endif %}
    </div>

    {% if not term %}
        <div class="alert alert-warning">{{ empty_message|default('Term nebyl nalezen.') }}</div>
    {% elseif items is empty %}
        <p class="text-muted">{{ empty_message|default('Tento term zatím nemá žádný obsah.') }}</p>
    {% else %}
        <div class="article-stack card article-list archive-list">
            <div class="article-list-body reel-feed">
                {% for post in items %}
                    {% set type_def = content_types[post.type]|default({'slug': post.type, 'name': post.type}) %}
                    {% set thumb = post.thumbnail ?? null %}
                    {% set preview = post.excerpt ?: post.body %}
                    {% set preview_text = preview ? preview|striptags : null %}
                    {% if loop.first %}
                        <article class="article-feature reel-card">
                            <div class="article-feature-thumb">
                                {% if thumb %}
                                    <div class="ratio ratio-16x9 h-100">
                                        <img src="/{{ thumb.path }}/{{ thumb.webp_filename ?: thumb.filename }}" alt="{{ thumb.alt ?: post.title }}" loading="lazy" decoding="async">
                                    </div>
                                {% else %}
                                    <div class="article-feature-fallback ratio ratio-16x9 text-uppercase">{{ post.title|default('A')|slice(0, 1) }}</div>
                                {% endif %}
                            </div>
                            <div class="article-feature-body">
                                <p class="article-meta mb-1">{{ post.created_at|date('j. n. Y') }} · {{ type_def.name|default(type_def.slug) }}</p>
                                <h2 class="article-feature-title mb-3">
                                    <a href="/{{ type_def.slug }}/{{ post.slug }}" class="stretched-link text-decoration-none">{{ post.title }}</a>
                                </h2>
                                {% if preview_text %}
                                    <p class="article-subtitle mb-0 d-md-none">{{ preview_text|slice(0, 150) }}{% if preview_text|length > 150 %}…{% endif %}</p>
                                    <p class="article-subtitle mb-0 d-none d-md-block">{{ preview_text }}</p>
                                {% endif %}
                            </div>
                        </article>
                    {% else %}
                        <article class="article-row reel-card d-flex align-items-center align-items-md-start gap-3 gap-md-4">
                            <div class="article-thumb flex-shrink-0 d-flex align-items-center justify-content-center text-uppercase fw-bold" aria-hidden="true">
                                {% if thumb %}
                                    <img src="/{{ thumb.path }}/{{ thumb.webp_filename ?: thumb.filename }}" alt="{{ thumb.alt ?: post.title }}" loading="lazy" decoding="async">
                                {% else %}
                                    {{ post.title|default('A')|slice(0, 1) }}
                                {% endif %}
                            </div>
                            <div class="flex-grow-1">
                                <p class="article-meta mb-1">{{ post.created_at|date('j. n. Y') }} · {{ type_def.name|default(type_def.slug) }}</p>
                                <h2 class="h5 mb-2">
                                    <a href="/{{ type_def.slug }}/{{ post.slug }}" class="stretched-link text-decoration-none">{{ post.title }}</a>
                                </h2>
                                {% if preview_text %}
                                    <p class="article-subtitle mb-0 d-none d-md-block">{{ preview_text|slice(0, 170) }}{% if preview_text|length > 170 %}…{% endif %}</p>
                                {% endif %}
                            </div>
                        </article>
                    {% endif %}
                    {% if not loop.last %}
                        <div class="reel-prompt d-md-none" aria-hidden="true">Posuňte se dolů na další příspěvek</div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}
